<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template t-name="l10n_cl_fe.dte_external_layout">
    <t t-call="web.basic_layout">
    <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
    <style>
      .table{
      margin-bottom:0px !important;
      }
    </style>
    
          <!-- Multicompany -->
              <t t-if="not o and doc">
                  <t t-set="o" t-value="doc"/>
              </t>

              <t t-if="o and 'company_id' in o">
                  <t t-set="company" t-value="o.company_id.sudo()"/>
              </t>
              <t t-if="not o or not 'company_id' in o">
                  <t t-set="company" t-value="res_company"/>
              </t>
              <t t-if="'journal_document_class_id' in o and o.journal_document_class_id">
                <t t-set="document_class_id" t-value="o.journal_document_class_id.sii_document_class_id"/>
              </t>
              <t t-set="partner_id" t-value="o.partner_id" />
              <t t-set="commercial_partner_id" t-value="o.partner_id.commercial_partner_id" />
              <t t-set="logo" t-value="company.logo" />
              <t t-set="sii_document_number" t-value="o.sii_document_number" />
              <t t-if="o.type in ['in_invoice', 'in_refund']">
                <t t-set="partner_id" t-value="company.partner_id" />
                <t t-set="commercial_partner_id" t-value="company.partner_id" />
                <t t-set="company" t-value="o.partner_id" />
                <t t-set="logo" t-value="o.partner_id.image" />
                <t t-set="sii_document_number" t-value="o.reference" />
              </t>
              <div class="header">
                <div class="row">
                    <div class="col-xs-12">
                        <p style="text-align:left;text-transform:uppercase;font-weight:900;font-size:20px;color:black;">
                            <span t-field="o.company_id.partner_id.ref"/>
                        </p>
                    </div>
                </div>
                <div class="row" style="padding-top:20px;">
                    <div class="col-xs-3" style="height: 160px; padding-left: 0; padding-right: 0;">
                        <img t-if="logo" t-att-src="'data:image/png;base64,%s' % to_text(logo)" style="min-width: 330px;"/>
                    </div>
                    <div class="col-xs-5" style="text-align:left; height: 160px; font-family:Arial;max-width:480px;">
                        <h4 style="text-transform:uppercase; color:black;">
                            <strong t-field="company.name"/>
                        </h4>

                        <h6 style="color:DimGray;">
                            <t t-if="company.activity_description">
                              <span>Giro     : </span><span t-field="company.activity_description.name"/><br/>
                            </t>
                                <!-- domicilios -->
                            <span>Dirección: </span><span t-field="company.street"/>, <span t-field="company.city_id.name"/><br/>
                                <!-- domicilios -->
                            <span>Teléfono :</span><span t-field="company.phone"/><br/>
                            <span>E-mail   : </span><span t-field="company.email"/><br/>
                            <span>Web      : </span><span t-field="company.website" style="color:Blue;"/>
                        </h6>
                    </div>
                    <div class="col-xs-4">
                        <div style="position:relative;left:175px;border: 4px solid black;text-align: center;font-size:23px;padding-bottom:0px !important; height:185px; width:365px;">
                          <h6 style="color:black;font-size:23px;padding-bottom:6px; padding-top:10px; font-family:Arial;">
                              R.U.T.: <span t-field="company.document_number"/>
                          </h6>
                          <h6 name="document_class_id" t-if="document_class_id" style="line-height:23px;font-size:23px;color:black;text-align:center;text-transform:uppercase;padding-bottom:10px;font-family:Arial;">
                             <span t-field="document_class_id.name"/>
                          </h6>
                          <h6 t-if="sii_document_number" style="color: black;text-align: center;font-size:23px;padding-bottom:4px;font-family:Arial;">
                              N° <span t-esc="sii_document_number"/>
                          </h6>
                          <br/>
                      </div>
                      <div class="row" style="position:relative;left:290px; margin-top:0px !important; padding-top:0px!important;">
                          <h7 style="color:black;text-align:center;font-size:23px;text-transform:uppercase;">
                              SII - <span t-field="o.company_id.sii_regional_office_id.name"/>
                          </h7>
                      </div>
                    </div>
                </div>
                <div class="row" style="display:none !important;">
                  <div name="company_address"/>
                </div>
            </div>

              <div class="page" style="padding-top:10px;">
              <t t-if="'date_invoice' in o and o.date_invoice">
                  <strong>Fecha Emisión: </strong><strong t-field="o.date_invoice" t-options ='{"format": "dd MMMM yyyy"}'/>
              </t>
                  <div class="row" style="border: 1px solid black; margin-left: 0px; border-radius: 7px 7px 7px 7px; padding:3px;">
                      <table class="table cl_invoice" style="margin-bottom:0px !important;">
                        <tbody>
                          <tr style="max-height:15px; font-size:12px !important;">
                            <td style="border-top:0px !important;padding:0px !important;">
                                <strong>Señor (es):</strong>
                            </td>
                            <td style="border-top:0px !important;padding:0px !important;min-width:400px;max-width:400px;">
                                <span t-field="commercial_partner_id.name"/>
                            </td>
                            <td style="border-top:0px !important;padding:0px !important;">
                                <strong>Comuna:</strong>
                            </td>
                            <td style="border-top:0px !important;padding:0px !important;">
                                <span t-field="partner_id.city_id.name"/>
                            </td>
                          </tr>
                          <tr style="max-height:15px; font-size:12px !important;">
                            <td style="border-top:0px !important;padding:0px !important;">
                                <strong>RUT:</strong>
                            </td>
                            <td style="border-top:0px !important;padding:0px !important;min-width:400px;max-width:400px;">
                                <span t-field="commercial_partner_id.document_number"/>
                            </td>
                            <td style="border-top:0px !important;padding:0px !important;">
                                <strong>Ciudad:</strong>
                            </td>
                            <td style="border-top:0px !important;padding:0px !important;">
                                <span t-field="partner_id.city"/>
                            </td>
                          </tr>
                          <tr style="max-height:15px; font-size:12px !important;">
                            <td style="border-top:0px !important;padding:0px !important;">
                                <strong>Domicilio:</strong>
                            </td>
                            <td style="border-top:0px !important;padding:0px !important;min-width:400px;max-width:400px;">
                                <span t-field="partner_id.street"/><span t-field="partner_id.street2"/>
                            </td>
                            <td style="border-top:0px !important;padding:0px !important;">
                                <strong>Condición de Pago:</strong>
                            </td>
                            <td style="border-top:0px !important;padding:0px !important;">
                                <span t-if="o.forma_pago" t-field="o.forma_pago"/>
                            </td>
                          </tr>
                          <tr style="max-height:15px; font-size:12px !important;">
                            <td style="border-top:0px !important;padding:0px !important;">
                                <strong>Giro:</strong>
                            </td>
                            <td style="border-top:0px !important;padding:0px !important;min-width:400px;max-width:400px;">
                                <span t-field="commercial_partner_id.activity_description.name"/>
                            </td>
                            <td style="border-top:0px !important;padding:0px !important;">
                                <strong>Vencimiento:</strong>
                            </td>
                            <td style="border-top:0px !important;padding:0px !important;">
                                <span t-field="o.date_due" t-options ='{"format": "dd MMMM yyyy"}'/>
                            </td>
                          </tr>
                          <tr style="max-height:15px; font-size:12px !important;">
                            <td style="border-top:0px !important;padding:0px !important;">
                                <strong>Contacto:</strong>
                            </td>
                            <td style="border-top:0px !important;padding:0px !important;min-width:400px;max-width:400px;">
                              <t t-if="'contact_id' in o and o.contact_id">
                                  <span t-field="o.contact_id.name"/>
                              </t>
                            </td>
                            <td style="border-top:0px !important;padding:0px !important;">
                                <strong>Vendedor:</strong>
                            </td>
                            <td style="border-top:0px !important;padding:0px !important;">
                                <span t-field="o.user_id"/>
                            </td>
                          </tr>
                        </tbody>
                      </table>
                    </div>
                  <div style="min-height:680px; max-height:680px; padding-top:5px;">
                    <t t-if="o.referencias">
                      <span  style="font-size:8px;"> Documento de Referencia</span>
                      <div class="row" style="max-height: 75px; margin-top:5px; margin-left: 0px; border: 1px solid black; border-radius: 7px 7px 7px 7px; padding:3px;" name="reference">
                        <table class="table table-condensed" style="padding:3px;">
                          <thead style="max-height:15px; font-size:8px !important;">
                            <th>
                              <strong>Folio:</strong>
                            </th>
                            <th>
                              <strong>Referencia:</strong>
                            </th>
                            <th>
                              <strong>Motivo/observación:</strong>
                            </th>
                            <th>
                              <strong>Fecha del documento</strong>
                            </th>
                          </thead>
                          <tbody t-if="'referencias' in o and o.referencias">
                            <t t-foreach="o.referencias" t-as="l">
                                <tr style="max-height:8px; font-size:10px !important;">
                                  <td style="border-top:0px !important;padding:0px !important;">
                                        <span t-if="l.origen" t-field="l.origen"/>
                                    </td>
                                  <td style="border-top:0px !important;padding:0px !important;">
                                      <span t-if="l.sii_referencia_TpoDocRef" t-field="l.sii_referencia_TpoDocRef.name"/>
                                  </td>
                                  <td name="reference" style="border-top:0px !important;padding:0px !important;">
                                    <t t-if="l.sii_referencia_CodRef"><span t-esc="l.sii_referencia_CodRef[0]" /> <span t-field="l.sii_referencia_CodRef" />: </t><span t-if="l.motivo" t-field="l.motivo"/>
                                  </td>
                                  <td style="border-top:0px !important;padding:0px !important;">
                                    <span t-if="l.fecha_documento" t-field="l.fecha_documento"/>
                                  </td>
                              </tr>
                            </t>
                        </tbody>
                          </table>
                    </div>
                  </t>
                  <!-- Is there a discount on at least one line? -->
                   <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>
                   <t t-set="price_included" t-value="o.is_price_included()" />
                   <div style="position:relative; height:550px; top:5px; margin-left: 0px; margin-right: -15px; border: 1px solid black; border-radius: 7px 7px 7px 7px; padding:3px;">
                   <table class="table table-condensed">
                       <thead>
                           <tr style="line-height:12px; background-color: #009BDD;color: white;">
                              <th style="width: 5% !important;border: 1px solid LightGray; border-top:0px !important; text-align: center; font-family:Arial; font-size:12px; border-radius: 5px 0px 0px 0px;">Item</th>
                              <th style="border: 1px solid LightGray; border-top:0px !important;text-align: center; font-family:Arial; font-size:12px;">Cantidad</th>
                              <th style="border: 1px solid LightGray; border-top:0px !important; text-align: center; font-family:Arial; font-size:12px;">Descripción</th>
                              <th style="border: 1px solid LightGray; border-top:0px !important; text-align: center; font-family:Arial; font-size:12px;">Precio Unitario</th>
                              <th t-if="display_discount" style="border: 1px solid LightGray; border-top:0px !important; text-align: center; font-family:Arial; font-size:12px;" groups="sale.group_discount_per_so_line">Desc.(%)</th>
                              <th style="border-top:0px !important; text-align: center; font-family:Arial; font-size:12px; border-radius: 0px 5px 0px 0px;">Precio</th>
                           </tr>
                       </thead>
                       <tbody class="invoice_tbody">
                           <t t-set="counter" t-value="0"/>
                           <tr t-foreach="o.invoice_line_ids" t-as="l" style="max-height:8px;line-height:10px !important; font-size:12px !important;">
                               <t t-set="counter" t-value="counter +1"/>
                               <td style="border: 1px solid LightGray; border-top:0px; padding:0px 0px !important; text-align: center; font-family:Arial; font-size:10px;"> <t t-esc="counter"/></td>
                               <td style="border: 1px solid LightGray; max-height:8px;line-height:10px !important; text-align: center; font-family:Arial; font-size:10px;">
                                   <span t-field="l.quantity"/>
                                   <span t-field="l.uom_id" groups="product.group_uom" style="font-family:Arial; font-size:8px;"/>
                               </td>
                               <td style="border: 1px solid LightGray; max-height:8px;line-height:10px !important; text-align: left; font-family:Arial; font-size:10px;"><span t-field="l.name"/></td>
                               <td style="border: 1px solid LightGray; max-height:8px;line-height:10px !important; text-align: right; font-family:Arial; font-size:10px;">
                                   <span t-field="l.price_unit" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                               </td>
                               <td t-if="display_discount"  groups="sale.group_discount_per_so_line" style="border: 1px solid LightGray; max-height:8px;line-height:10px !important; text-align: center; font-family:Arial; font-size:11px;">
                                   <span t-field="l.discount"/>
                               </td>
                               <td style="border: 1px solid LightGray; max-height:8px;line-height:10px !important; text-align: right; font-family:Arial; font-size:11px;">
                                    <span t-field="l.price_subtotal" t-field-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                               </td>
                           </tr>
                       </tbody>
                   </table>
                 </div>
                  <div class="row" style="position:relative; margin-left: 5px; top:5px; padding-top:2px; padding-left: 0; padding-right: 0;">
                      <span style="color:gray; font-family:Arial; font-size:12px; text-align: left">  Depositar o transferir a Banco Estado, Cuenta Vista 622-7-009287-5, a Nombre de GESTION RIEGO SpA, R.U.T. 76.942.681-7</span>
                  </div>
                  </div>
                   <p t-if="o.comment">
                       <strong>Comment:</strong>
                       <span t-field="o.comment"/>
                   </p>

                   <div class="row">



                      <div class="col-xs-4" style="padding-top:17px;width:380px;">
                        <div class="col-xs-12">
                           <img t-if="o.sii_barcode_img" t-att-src="'data:image/png;base64,%s' % to_text(o.sii_barcode_img)" class="img" style="width: 380px;"/>
                        </div>
                        <div class="col-xs-12">
                            <p style="text-align:center;color:red; font-size:9px;">
                              Timbre Electrónico SII
                              <br/>
                              Resolución <t t-esc='o.company_id.dte_resolution_number'/> de <t t-if="o.company_id.dte_resolution_date" t-esc='o.company_id.dte_resolution_date.strftime("%Y")'/> Verifique documento en: <t t-if="not o._es_boleta()">www.sii.cl</t><t t-if="o._es_boleta()" t-esc="o.company_id.website+'/boleta/'+o.sii_document_number"/>
                            </p>
                        </div>
                      </div>




              

               <t t-if="cedible">
                <div class="col-xs-4" style="position:relative;left:8px;padding-top:65px;width:320px;border: 1px solid black; border-radius: 5px 5px 5px 5px; padding:1px;">
                 <table class="table table-condensed">
                  <tbody>
                  <tr>
                    <td style="width:30%; background-color: #009BDD;color: white;max-height:10px;">
                      <strong style="text-align:left; font-size:9px !important;">NOMBRE:</strong>
                    </td>
                    <td style="width:70%; background-color: #00000;color: white;">
                      
                    </td>
                  </tr>
                  <tr>
                    <td style="width:30%; background-color: #009BDD;color: white;">
                      <strong style="text-align:left; font-size:9px !important;">R.U.T.:</strong>
                    </td>
                    <td></td>
                  </tr>
                  <tr>
                    <td style="width:30%; background-color: #009BDD;color: white;">
                      <strong style="text-align:left; font-size:9px !important;">FECHA:</strong>
                    </td>
                    <td></td>
                  </tr>
                  <tr>
                    <td style="width:30%; background-color: #009BDD;color: white;">
                      <strong style="text-align:left; font-size:9px !important;">RECINTO:</strong>
                    </td>
                    <td></td>
                  </tr>
                  <tr>
                    <td style="width:30%; background-color: #009BDD;color: white;">
                      <strong style="text-align:left; font-size:9px !important;">FIRMA:</strong>
                    </td>
                    <td>
                    </td>
                  </tr>
                  <tr>
                    <td colspan="2">
                      <span style="text-align:left; font-size:9px !important;">"El acuse de recibo que se declara en este acto, de acuerdo a lo dispuesto en la letra b) del Artículo 4°, y la letra c) del Artículo 5° de la Ley 19.983, acredita que la entrega de mercaderías o servicio(s) prestado(s) ha(n) sido recibido(s)"</span>
                    </td>
                  </tr>
                </tbody>
              </table>
             </div>
               </t>
                  
                      




                      <div id="total" class="col-xs-4" style="position:relative;left:315px;padding-top:17px;width:410px;border-radius: 5px 5px 5px 5px;">
                                                    <table class="table table-condensed" >
                              <t t-if="o.global_descuentos_recargos">
                                <tr t-foreach="o.global_descuentos_recargos" t-as="gdr" class="border-black" style="max-height:11px; font-size:13px !important; background-color: #009BDD;color: white;">
                                  <td><strong>Descuento o Recargo Global</strong></td>
                                  <td class="text-right">
                                      <span t-esc="gdr.valor if gdr.gdr_type=='amount' else gdr.amount_untaxed_global_dr" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                  </td>
                                </tr>
                              </t>
                              <tr style="line-height:12px;width:100%; max-height:11px; font-size:13px !important; background-color: #009BDD;color: white; text-align: left; font-family:Arial; border-radius: 5px 5px 0px 0px;" name="subtotal">
                                  <td style="max-width:70px" ><strong>Subtotal</strong></td>
                                  <td style="min-width:100px" class="text-right">
                                      <span t-field="o.amount_untaxed" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                  </td>
                              </tr>
                              <tr name="discount" t-if="display_discount" class="border-black" style="line-height:12px; max-height:11px;  !important; background-color: #009BDD;color: white; text-align: left; font-family:Arial; font-size:13px;">
                               <td><strong>Descuento</strong></td>
                               <td class="text-right">
                                   <span t-esc="o.getTotalDiscount()" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                               </td>
                              </tr>
                              <tr t-foreach="o.tax_line_ids" t-as="t" style="line-height:12px; max-height:11px; font-size:13px !important; background-color: #009BDD;color: white; text-align: left; font-family:Arial;">
                                 <td><span t-field="t.tax_id.description"/></td>
                                 <td class="text-right">
                                     <span t-esc="t.amount if t.amount != 0 else t.base" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                 </td>
                              </tr>
                              <tr style="line-height:12px; max-height:12px; font-size:13px !important;background-color: #009BDD;color: white; text-align: left; font-family:Arial; border-radius: 7px 70px 7px 7px;">
                                  <td><strong>Total</strong></td>
                                  <td class="text-right">
                                       <span t-field="o.amount_total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                  </td>
                              </tr>
                          </table>
                      </div>
                      


                    </div>


              <div class="footer" style="text-align: center; height:30px; width:100%">
                <span style="text-align: center; color:gray; font-family:Arial; font-size:9px;">Gracias por Preferirnos, somos un equipo de profesionales que trabajamos para proveer soluciones de Riego Tecnificado
                </span><br/>
                <span style="text-align: center; color:gray; font-family:Arial; font-size:9px;">www.gestionriego.cl
                </span>


           
                  </div>
              </div>
              </t>
          </template>

          <template id="report_invoice_document_with_payments" inherit_id="l10n_cl_fe.dte_external_layout" primary="True">
            <xpath expr="//div[@id='total']/table" position="inside">
                <t t-set="payments_vals" t-value="o._get_payments_vals()"/>
                <t t-foreach="payments_vals" t-as="payment_vals">
                    <tr>
                        <td style="font-size:10px">
                            <i class="oe_form_field text-right oe_payment_label">Paid on <t t-esc="payment_vals['date']"/></i>
                        </td>
                        <td class="text-right">
                            <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </t>
                <t t-if="len(payments_vals) > 0">
                    <tr class="border-black">
                        <td><strong>Amount Due</strong></td>
                        <td class="text-right">
                             <span t-field="o.residual" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </t>
            </xpath>
        </template>

          <template id="dte_invoice" inherit_id="account.report_invoice">
              <t t-call="web.html_container" position="replace">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="o">
                        <t t-call="l10n_cl_fe.dte_external_layout" t-lang="o.partner_id.lang"/>
                    </t>
                </t>
              </t>
          </template>

          <template id="dte_invoice_con_pagos" inherit_id="account.report_invoice_with_payments">
              <t t-call="web.html_container" position="replace">
                <t t-call="web.html_container">
                  <t t-foreach="docs" t-as="o">
                      <t t-set="lang" t-value="o.user_id.lang if o.type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                      <t t-call="l10n_cl_fe.report_invoice_document_with_payments" t-lang="lang"/>
                  </t>
                </t>
              </t>
          </template>

          <template id="invoice_cedible">
            <t t-call="l10n_cl_fe.dte_invoice_con_pagos" >
              <t t-set="cedible" t-value="True" />
            </t>
          </template>
          <report
                    string="Print Cedible"
                    id="action_print_cedible"
                    model="account.invoice"
                    report_type="qweb-pdf"
                    name="l10n_cl_fe.invoice_cedible"
                    file="l10n_cl_fe.report_invoice_cedible"
                    attachment_use="True"
                    attachment="(object.state in ('open','paid')) and ('CED_'+(object.number or '').replace('/','')+'.pdf')"
          />

          <report
                    string="Print Ticket"
                    id="action_print_ticket"
                    model="account.invoice"
                    report_type="qweb-pdf"
                    name="l10n_cl_fe.report_ticket"
                    file="l10n_cl_fe.report_ticket"
                    attachment_use="True"
                    attachment="(object.state in ('open','paid')) and ('T_'+(object.number or '').replace('/','')+'.pdf')"
          />

          <template id="report_ticket">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <div class="page">
                <div class="row">
                    <div class="col-xs-12 text-center">
                        <h2><span t-esc="o.company_id.partner_id.name"/> </h2>
                        <h3> <span t-esc="o.company_id.partner_id.document_number"/></h3>
                    </div>
                    <div class="col-xs-12 text-center">
                        <h4 t-field="o.company_id.activity_description"/>
                    </div>
                    <div class="col-xs-12 text-center">
                        <h4> <span t-esc="o.company_id.partner_id.street"/> <span t-esc="o.company_id.partner_id.city"/></h4>
                    </div>
                    <div class="col-xs-12 text-center">
                        <h4> <span t-field="o.journal_document_class_id.sii_document_class_id.name"/> N°: <span t-field="o.sii_document_number"/></h4>
                    </div>
                </div>

                <div class="row">
                  <div class="col-xs-12 text-left">
                      Cliente: <span t-field="o.partner_id.name"/><br/>
                      Rut: <span t-field="o.partner_id.document_number"/><br/>
                      Dirección: <span t-field="o.partner_id.street"/><br/>
                      Número de identificación: <span t-field="o.partner_id.id"/><br/>
                  </div>
                </div>

                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Descripción</th>
                            <th class="text-right">Cantidad</th>
                            <th class="text-right">Precio Unitario</th>
                            <th class="text-right">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.invoice_line_ids" t-as="line">
                            <td><span t-field="line.product_id"/></td>
                            <td class="text-right">
                                <span t-field="line.quantity"/>
                            </td>
                            <td class="text-right">
                              <span t-field="line.price_unit" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                            </td>
                            <td class="text-right">
                                <span t-field="line.price_tax_included" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-xs-6 pull-right">
                        <table class="table table-condensed">
                          <t t-foreach="o.tax_line_ids" t-as="t">
                              <tr class="border-black" t-if="t.amount == 0">
                                <td>MONTO EXENTO</td>
                                <td class="text-right">
                                  <span t-field="t.base" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                </td>
                              </tr>
                            </t>

                            <tr>
                                <td><strong>MONTO TOTAL</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_total" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>FORMAS DE PAGO</th>
                            <th>Monto</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr >
                            <td>
                                Efectivo
                            </td>
                            <td>
                              <span t-field="o.amount_total" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="row">
                  <div class="col-xs-12 text-left">
                      Caja N°: <span t-field="o.journal_id.point_of_sale_id.name"/><br/>
                      Cajero: <span t-field="o.user_id.name"/><br/>
                      Fecha: <span t-field="o.date_invoice"/><br/>
                  </div>
                </div>

                <div class="row">
                  <div class="col-xs-12" >
                     <span t-field="o.sii_barcode_img" t-field-options="{&quot;widget&quot;: &quot;image&quot;}" style="margin-left:25%;"/>
                  </div>
                  <div class="col-xs-12">
                      <p style="text-align:center;color:red; font-size:8px;">
                        Timbre Electrónico SII
                        <br/>
                        Resolución <t t-esc='o.company_id.dte_resolution_number'/> de <t t-if="o.company_id.dte_resolution_date" t-esc='o.company_id.dte_resolution_date.strftime("%Y")'/> Verifique documento en: <t t-if="not o._es_boleta()">www.sii.cl</t><t t-if="o._es_boleta()" t-esc="o.company_id.website+'/boleta/'+o.sii_document_number"/>
                      </p>
                  </div>
                </div>

            </div>
        </t>
    </t>
</template>


        <template id="PosTicket_dte">
          <div class="pos-sale-ticket">

              <div class="pos-center-align"> <t t-esc="order.name"/></div>
              <br />
              <t t-esc="widget.pos.company.name"/><br />
              Phone: <t t-esc="widget.pos.company.phone || ''"/><br />
              User: <t t-esc="widget.pos.cashier ? widget.pos.cashier.name : widget.pos.user.name"/><br />
              Shop: <t t-esc="widget.pos.shop.name"/><br />
              <br />
              <t t-if="receipt.header">
                  <div style='text-align:center'>
                      <t t-esc="receipt.header" />
                  </div>
                  <br />
              </t>
              <table class='receipt-orderlines'>
                  <colgroup>
                      <col width='50%' />
                      <col width='25%' />
                      <col width='25%' />
                  </colgroup>
                  <tr t-foreach="orderlines" t-as="orderline">
                      <td>
                          <t t-esc="orderline.get_product().display_name"/>
                           <t t-if="orderline.get_discount() > 0">
                              <div class="pos-disc-font">
                                  With a <t t-esc="orderline.get_discount()"/>% discount
                              </div>
                          </t>
                      </td>
                      <td class="pos-right-align">
                          <t t-esc="orderline.get_quantity_str_with_unit()"/>
                      </td>
                      <td class="pos-right-align">
                          <t t-esc="widget.format_currency(orderline.get_display_price())"/>
                      </td>
                  </tr>
              </table>
              <br />
              <table class='receipt-total'>
                  <tr>
                      <td>Subtotal:</td>
                      <td class="pos-right-align">
                          <t t-esc="widget.format_currency(order.get_total_without_tax())"/>
                      </td>
                  </tr>
                  <t t-foreach="order.get_tax_details()" t-as="taxdetail">
                      <tr>
                          <td><t t-esc="taxdetail.name" /></td>
                          <td class="pos-right-align">
                              <t t-esc="widget.format_currency(taxdetail.amount)" />

                          </td>
                      </tr>
                  </t>
                  <tr>
                      <td>Discount:</td>
                      <td class="pos-right-align">
                          <t t-esc="widget.format_currency(order.get_total_discount())"/>
                      </td>
                  </tr>
                  <tr class="emph">
                      <td>Total:</td>
                      <td class="pos-right-align">
                          <t t-esc="widget.format_currency(order.get_total_with_tax())"/>
                      </td>
                  </tr>
              </table>
              <br />
              <table class='receipt-paymentlines'>
                  <t t-foreach="paymentlines" t-as="line">
                    <tr>
                        <td>
                            <t t-esc="line.name"/>
                        </td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency(line.get_amount())"/>
                        </td>
                    </tr>
                  </t>
              </table>
              <br />
              <table class='receipt-change'>
                  <tr><td>Change:</td><td class="pos-right-align">
                      <t t-esc="widget.format_currency(order.get_change())"/>
                      </td></tr>
              </table>
              <br/>
              <div class="row">
                <div class="col-xs-12">
                   <span t-field="o.sii_barcode_img" t-field-options="{&quot;widget&quot;: &quot;image&quot;}"/>
                </div>
                <div class="col-xs-12">
                    <p style="text-align:center;color:red; font-size:8px;">
                      Timbre Electrónico SII
                      <br/>
                      Resolución <t t-esc='o.company_id.dte_resolution_number'/> de <t t-if="o.company_id.dte_resolution_date" t-esc='o.company_id.dte_resolution_date.strftime("%Y")'/> Verifique documento en: <t t-if="not o._es_boleta()">www.sii.cl</t><t t-if="o._es_boleta()" t-esc="o.company_id.website+'/boleta/'+o.sii_document_number"/>
                    </p>
                </div>
              </div>
              <t t-if="receipt.footer">
                  <br />
                  <div style='text-align:center'>
                      <t t-esc="receipt.footer" />
                  </div>
              </t>
          </div>
      </template>
</odoo>
