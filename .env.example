# .env.example - Template de configuración (sin secrets)
# Copiar a .env y completar con valores reales

# ═══════════════════════════════════════════════════════════
# MICROSERVICIO IA (Claude Sonnet 4.5)
# ═══════════════════════════════════════════════════════════

AI_SERVICE_URL=http://ai-service:8000
AI_SERVICE_API_KEY=your-api-key-here-DO-NOT-COMMIT
AI_SERVICE_TIMEOUT=10
AI_SERVICE_VERIFY_SSL=true

# ═══════════════════════════════════════════════════════════
# PREVIRED API
# ═══════════════════════════════════════════════════════════

PREVIRED_USERNAME=your-username-here
PREVIRED_PASSWORD=your-password-here-DO-NOT-COMMIT
PREVIRED_ENV=production  # production | sandbox

# ═══════════════════════════════════════════════════════════
# MINDICADOR.CL (Indicadores Económicos)
# ═══════════════════════════════════════════════════════════

MINDICADOR_API_URL=https://mindicador.cl/api
MINDICADOR_TIMEOUT=5
