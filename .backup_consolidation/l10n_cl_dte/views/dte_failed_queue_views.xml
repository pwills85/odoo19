<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ══════════════════════════════════════════════════════════════════════
         DTE FAILED QUEUE VIEWS - Native Disaster Recovery
         ══════════════════════════════════════════════════════════════════════
         Migration from: odoo-eergy-services failed_queue.py (2025-10-24)
    -->

    <!-- Tree View -->
    <record id="view_dte_failed_queue_tree" model="ir.ui.view">
        <field name="name">dte.failed.queue.tree</field>
        <field name="model">dte.failed.queue</field>
        <field name="arch" type="xml">
            <list string="Failed DTEs Queue"
                  decoration-danger="state == 'abandoned'"
                  decoration-warning="state == 'pending'"
                  decoration-success="state == 'success'"
                  decoration-muted="state == 'retrying'"
                  create="false" edit="false">
                <field name="failed_date"/>
                <field name="dte_type"/>
                <field name="folio"/>
                <field name="rut_emisor"/>
                <field name="error_type"/>
                <field name="retry_count"/>
                <field name="max_retries"/>
                <field name="next_retry_date"/>
                <field name="state" widget="badge"
                       decoration-danger="state == 'abandoned'"
                       decoration-warning="state == 'pending'"
                       decoration-success="state == 'success'"
                       decoration-info="state == 'retrying'"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <button name="action_retry_now"
                        string="Retry Now"
                        type="object"
                        icon="fa-refresh"
                        invisible="state not in ['pending', 'retrying']"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_dte_failed_queue_form" model="ir.ui.view">
        <field name="name">dte.failed.queue.form</field>
        <field name="model">dte.failed.queue</field>
        <field name="arch" type="xml">
            <form string="Failed DTE" create="false" edit="false">
                <header>
                    <button name="action_retry_now"
                            string="Retry Now"
                            type="object"
                            class="btn-primary"
                            icon="fa-refresh"
                            invisible="state not in ['pending', 'retrying']"/>
                    <button name="action_abandon"
                            string="Abandon"
                            type="object"
                            class="btn-danger"
                            icon="fa-ban"
                            confirm="Are you sure you want to abandon this DTE? It will not be retried automatically."
                            invisible="state in ['success', 'abandoned']"/>
                    <button name="action_view_invoice"
                            string="View Invoice"
                            type="object"
                            class="btn-secondary"
                            icon="fa-file-text-o"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,retrying,success"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_invoice"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-file-text-o">
                            <field name="move_id" widget="statinfo" string="Invoice"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                        <div class="badge badge-pill badge-danger" invisible="state != 'abandoned'">
                            <i class="fa fa-ban"/> ABANDONED
                        </div>
                        <div class="badge badge-pill badge-success" invisible="state != 'success'">
                            <i class="fa fa-check"/> SUCCESS
                        </div>
                        <div class="badge badge-pill badge-warning" invisible="state != 'pending'">
                            <i class="fa fa-clock-o"/> PENDING RETRY
                        </div>
                    </div>

                    <group>
                        <group name="dte_info" string="DTE Information">
                            <field name="dte_type"/>
                            <field name="folio"/>
                            <field name="rut_emisor"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group name="error_info" string="Error Information">
                            <field name="error_type" widget="badge"
                                   decoration-danger="error_type == 'unavailable'"
                                   decoration-warning="error_type in ['timeout', 'connection']"
                                   decoration-info="error_type == 'validation'"/>
                            <field name="failed_date"/>
                            <field name="last_retry_date"/>
                            <field name="next_retry_date" invisible="state in ['success', 'abandoned']"/>
                        </group>
                    </group>

                    <group>
                        <group name="retry_info" string="Retry Information">
                            <field name="retry_count"/>
                            <field name="max_retries"/>
                            <field name="success_track_id" invisible="state != 'success'"/>
                            <field name="success_date" invisible="state != 'success'"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="error_message" string="Error Message">
                            <field name="error_message" widget="text" readonly="1"/>
                        </page>
                        <page name="retry_history" string="Retry History">
                            <field name="retry_history" widget="text" readonly="1" placeholder="No retry attempts yet..."/>
                        </page>
                        <page name="xml_content" string="XML Content">
                            <group>
                                <field name="xml_content" widget="binary" filename="'DTE_failed.xml'"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_dte_failed_queue_search" model="ir.ui.view">
        <field name="name">dte.failed.queue.search</field>
        <field name="model">dte.failed.queue</field>
        <field name="arch" type="xml">
            <search string="Failed DTEs">
                <field name="folio" string="Folio"/>
                <field name="dte_type" string="DTE Type"/>
                <field name="rut_emisor" string="RUT Emisor"/>
                <field name="move_id" string="Invoice"/>

                <!-- Status Filters -->
                <filter name="filter_pending"
                        string="Pending Retry"
                        domain="[('state', '=', 'pending')]"/>
                <filter name="filter_retrying"
                        string="Retrying"
                        domain="[('state', '=', 'retrying')]"/>
                <filter name="filter_success"
                        string="Success"
                        domain="[('state', '=', 'success')]"/>
                <filter name="filter_abandoned"
                        string="Abandoned"
                        domain="[('state', '=', 'abandoned')]"/>

                <separator/>

                <!-- Error Type Filters -->
                <filter name="filter_timeout"
                        string="Timeout Errors"
                        domain="[('error_type', '=', 'timeout')]"/>
                <filter name="filter_connection"
                        string="Connection Errors"
                        domain="[('error_type', '=', 'connection')]"/>
                <filter name="filter_unavailable"
                        string="SII Unavailable"
                        domain="[('error_type', '=', 'unavailable')]"/>
                <filter name="filter_validation"
                        string="Validation Errors"
                        domain="[('error_type', '=', 'validation')]"/>

                <separator/>

                <!-- Retry Filters -->
                <filter name="filter_max_retries_reached"
                        string="Max Retries Reached"
                        domain="[('retry_count', '&gt;=', 5)]"/>

                <separator/>

                <!-- Date Filters -->
                <filter name="filter_failed_date" string="Failed Date" date="failed_date"/>

                <separator/>

                <!-- DTE Type Filters -->
                <filter name="filter_factura_33"
                        string="Factura (33)"
                        domain="[('dte_type', '=', '33')]"/>
                <filter name="filter_factura_exenta_34"
                        string="Factura Exenta (34)"
                        domain="[('dte_type', '=', '34')]"/>
                <filter name="filter_guia_52"
                        string="Guía Despacho (52)"
                        domain="[('dte_type', '=', '52')]"/>

                <separator/>

                <group>
                    <filter name="group_by_state"
                            string="State"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_by_error_type"
                            string="Error Type"
                            context="{'group_by': 'error_type'}"/>
                    <filter name="group_by_dte_type"
                            string="DTE Type"
                            context="{'group_by': 'dte_type'}"/>
                    <filter name="group_by_failed_date"
                            string="Failed Date"
                            context="{'group_by': 'failed_date:day'}"/>
                    <filter name="group_by_company"
                            string="Company"
                            context="{'group_by': 'company_id'}"
                            groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_dte_failed_queue" model="ir.actions.act_window">
        <field name="name">Failed DTEs Queue</field>
        <field name="res_model">dte.failed.queue</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No failed DTEs in queue
            </p>
            <p>
                Failed DTEs are automatically added to this queue when sending to SII fails.
                <br/>
                They will be automatically retried every hour with exponential backoff.
                <br/>
                You can also retry manually from this screen.
            </p>
        </field>
    </record>

    <!-- Menu Item: MOVED to views/menus.xml to fix loading order issue -->

    <!-- Dashboard Action (Pending Retries) -->
    <record id="action_dte_failed_queue_pending" model="ir.actions.act_window">
        <field name="name">Pending DTEs (Retry Queue)</field>
        <field name="res_model">dte.failed.queue</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_pending': 1, 'search_default_filter_ready_for_retry': 1}</field>
        <field name="domain">[('state', '=', 'pending')]</field>
    </record>

</odoo>
