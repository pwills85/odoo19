    <!-- Tree View -->
    <record id="view_sii_activity_code_tree" model="ir.ui.view">
        <field name="name">sii.activity.code.tree</field>
        <field name="model">sii.activity.code</field>
        <field name="arch" type="xml">
            <list string="C√≥digos Actividad Econ√≥mica SII">
                <field name="code"/>
