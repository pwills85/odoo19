                <field name="parent_id" optional="hide"/>
                <field name="company_count" string="Empresas"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sii_activity_code_form" model="ir.ui.view">
        <field name="name">sii.activity.code.form</field>
        <field name="model">sii.activity.code</field>
        <field name="arch" type="xml">
            <form string="C√≥digo Actividad Econ√≥mica">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_companies"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-building"
                                invisible="company_count == 0">
                            <field name="company_count" widget="statinfo" string="Empresas"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Inactivo" bg_color="bg-danger"
                            invisible="active == True"/>

                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="parent_id"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="subcategories" string="Subcategor√≠as"
                              invisible="child_ids == []">
                            <field name="child_ids">
                                <tree>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="company_count"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sii_activity_code_search" model="ir.ui.view">
        <field name="name">sii.activity.code.search</field>
        <field name="model">sii.activity.code</field>
        <field name="arch" type="xml">
            <search string="C√≥digos Actividad Econ√≥mica">
                <field name="code"/>
                <field name="name"/>
                <field name="parent_id"/>
                <filter name="filter_active" string="Activos"
                        domain="[('active', '=', True)]"/>
                <filter name="filter_inactive" string="Inactivos"
                        domain="[('active', '=', False)]"/>
                <filter name="group_by_parent" string="Categor√≠a Padre"
                        context="{'group_by': 'parent_id'}"/>
