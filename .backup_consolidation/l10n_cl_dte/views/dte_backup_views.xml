<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ══════════════════════════════════════════════════════════════════════
         DTE BACKUP VIEWS - Native Disaster Recovery
         ══════════════════════════════════════════════════════════════════════
         Migration from: odoo-eergy-services backup_manager.py (2025-10-24)
    -->

    <!-- Tree View -->
    <record id="view_dte_backup_tree" model="ir.ui.view">
        <field name="name">dte.backup.tree</field>
        <field name="model">dte.backup</field>
        <field name="arch" type="xml">
            <list string="DTE Backups" create="false" edit="false">
                <field name="sent_date"/>
                <field name="dte_type"/>
                <field name="folio"/>
                <field name="rut_emisor"/>
                <field name="track_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="file_size" widget="integer"/>
                <field name="move_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_dte_backup_form" model="ir.ui.view">
        <field name="name">dte.backup.form</field>
        <field name="model">dte.backup</field>
        <field name="arch" type="xml">
            <form string="DTE Backup" create="false" edit="false">
                <header>
                    <button name="action_download_xml"
                            string="Download XML"
                            type="object"
                            class="btn-primary"
                            icon="fa-download"/>
                    <button name="action_view_invoice"
                            string="View Invoice"
                            type="object"
                            class="btn-secondary"
                            icon="fa-file-text-o"
                            invisible="move_id == False"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_invoice"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-file-text-o"
                                invisible="move_id == False">
                            <field name="move_id" widget="statinfo" string="Invoice"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group name="dte_info" string="DTE Information">
                            <field name="dte_type"/>
                            <field name="folio"/>
                            <field name="rut_emisor"/>
                            <field name="track_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group name="backup_info" string="Backup Information">
                            <field name="sent_date"/>
                            <field name="backup_date"/>
                            <field name="file_size" widget="integer"/>
                            <field name="xml_filename"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="xml_content" string="XML Content">
                            <group>
                                <field name="xml_content" filename="xml_filename" widget="binary"/>
                            </group>
                        </page>
                        <page name="notes" string="Notes">
                            <field name="notes" placeholder="Additional notes about this backup..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_dte_backup_search" model="ir.ui.view">
        <field name="name">dte.backup.search</field>
        <field name="model">dte.backup</field>
        <field name="arch" type="xml">
            <search string="DTE Backups">
                <field name="folio" string="Folio"/>
                <field name="dte_type" string="DTE Type"/>
                <field name="rut_emisor" string="RUT Emisor"/>
                <field name="track_id" string="Track ID"/>
                <field name="move_id" string="Invoice"/>

                <filter name="filter_sent_date" string="Sent Date" date="sent_date"/>

                <separator/>

                <filter name="filter_factura_33"
                        string="Factura (33)"
                        domain="[('dte_type', '=', '33')]"/>
                <filter name="filter_factura_exenta_34"
                        string="Factura Exenta (34)"
                        domain="[('dte_type', '=', '34')]"/>
                <filter name="filter_guia_52"
                        string="Guía Despacho (52)"
                        domain="[('dte_type', '=', '52')]"/>
                <filter name="filter_nota_debito_56"
                        string="Nota Débito (56)"
                        domain="[('dte_type', '=', '56')]"/>
                <filter name="filter_nota_credito_61"
                        string="Nota Crédito (61)"
                        domain="[('dte_type', '=', '61')]"/>

                <separator/>

                <group>
                    <filter name="group_by_dte_type"
                            string="DTE Type"
                            context="{'group_by': 'dte_type'}"/>
                    <filter name="group_by_sent_date"
                            string="Sent Date"
                            context="{'group_by': 'sent_date:month'}"/>
                    <filter name="group_by_company"
                            string="Company"
                            context="{'group_by': 'company_id'}"
                            groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_dte_backup" model="ir.actions.act_window">
        <field name="name">DTE Backups</field>
        <field name="res_model">dte.backup</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No DTE backups found
            </p>
            <p>
                DTE backups are created automatically when a DTE is successfully sent to SII.
                <br/>
                This provides disaster recovery protection for all electronic tax documents.
            </p>
        </field>
    </record>

    <!-- Menu Item: MOVED to views/menus.xml to fix loading order issue -->

</odoo>
