<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ═══════════════════════════════════════════════════════════
         DTE Generate Wizard Views
         Professional wizard for DTE generation with validations
         ═══════════════════════════════════════════════════════════ -->

    <!-- Form View -->
    <record id="view_dte_generate_wizard_form" model="ir.ui.view">
        <field name="name">dte.generate.wizard.form</field>
        <field name="model">dte.generate.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Electronic Tax Document (DTE)">
                <header>
                    <!-- Service Health Status Banner -->
                    <div class="alert alert-info" role="alert"
                         attrs="{'invisible': [('service_available', '=', False)]}">
                        <i class="fa fa-check-circle"/> <field name="service_status_message" readonly="1"/>
                    </div>
                    <div class="alert alert-warning" role="alert"
                         attrs="{'invisible': [('service_available', '=', True)]}">
                        <i class="fa fa-exclamation-triangle"/> DTE Service unavailable.
                        <field name="service_status_message" readonly="1"/>
                    </div>

                    <!-- Contingency Mode Banner -->
                    <div class="alert alert-warning" role="alert"
                         attrs="{'invisible': [('contingency_active', '=', False)]}">
                        <i class="fa fa-shield"/> <strong>Contingency Mode Active</strong><br/>
                        DTEs will be generated offline and sent when SII service recovers.
                    </div>
                </header>

                <sheet>
                    <group>
                        <!-- Invoice Information (Read-Only) -->
                        <group string="Invoice Information" col="2">
                            <field name="move_id" readonly="1"/>
                            <field name="dte_type" readonly="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>

                        <!-- DTE Configuration -->
                        <group string="DTE Configuration" col="2">
                            <field name="certificate_id"
                                   options="{'no_create': True, 'no_open': True}"
                                   required="1"/>
                            <field name="caf_id"
                                   options="{'no_create': True, 'no_open': True}"
                                   required="1"/>
                            <field name="environment" required="1" widget="radio"/>
                        </group>
                    </group>

                    <!-- Status Message -->
                    <group>
                        <field name="status_message" readonly="1" nolabel="1"
                               attrs="{'invisible': [('status_message', '=', False)]}"/>
                    </group>

                    <!-- Help Text -->
                    <div class="oe_grey">
                        <p><strong>Before generating DTE, ensure:</strong></p>
                        <ul>
                            <li>Invoice is posted and validated</li>
                            <li>Digital certificate is valid and not expired</li>
                            <li>CAF has available folios</li>
                            <li>Customer RUT is correctly formatted</li>
                            <li>All invoice lines have valid taxes</li>
                        </ul>
                    </div>

                    <!-- Hidden Fields for Computed Values -->
                    <field name="service_available" invisible="1"/>
                    <field name="contingency_active" invisible="1"/>
                </sheet>

                <footer>
                    <button name="action_generate_dte"
                            string="Generate DTE"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('service_available', '=', False), ('contingency_active', '=', False)]}"/>
                    <button name="action_cancel"
                            string="Cancel"
                            type="object"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_dte_generate_wizard" model="ir.actions.act_window">
        <field name="name">Generate DTE</field>
        <field name="res_model">dte.generate.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">form</field>
    </record>

</odoo>
