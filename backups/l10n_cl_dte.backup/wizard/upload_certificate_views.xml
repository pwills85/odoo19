<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_upload_certificate_wizard_form" model="ir.ui.view">
        <field name="name">upload.certificate.wizard.form</field>
        <field name="model">upload.certificate.wizard</field>
        <field name="arch" type="xml">
            <form string="Cargar Certificado Digital">
                <group>
                    <field name="name" placeholder="Ej: Certificado Eergygroup 2025"/>
                    <field name="cert_file" filename="cert_filename"/>
                    <field name="cert_filename" invisible="1"/>
                    <field name="cert_password" password="True"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </group>
                <footer>
                    <button name="action_upload" string="Cargar y Validar" type="object" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
