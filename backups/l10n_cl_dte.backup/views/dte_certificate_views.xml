<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Form: Certificado Digital -->
    <record id="view_dte_certificate_form" model="ir.ui.view">
        <field name="name">dte.certificate.form</field>
        <field name="model">dte.certificate</field>
        <field name="arch" type="xml">
            <form string="Certificado Digital DTE">
                <header>
                    <button name="action_validate" string="Validar Certificado" type="object" 
                            class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_revoke" string="Revocar" type="object" 
                            class="btn-danger" attrs="{'invisible': [('state', '=', 'revoked')]}"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,valid,expiring_soon,expired"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Vencido" bg_color="bg-danger"
                            attrs="{'invisible': [('state', '!=', 'expired')]}"/>
                    <widget name="web_ribbon" title="Por Vencer" bg_color="bg-warning"
                            attrs="{'invisible': [('state', '!=', 'expiring_soon')]}"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Ej: Certificado Eergygroup 2025"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="cert_rut" readonly="1"/>
                            <field name="cert_serial_number" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Certificado" name="certificate">
                            <group>
                                <group>
                                    <field name="cert_file" filename="cert_filename" 
                                           attrs="{'readonly': [('state', 'in', ['valid', 'expiring_soon'])]}"/>
                                    <field name="cert_filename" invisible="1"/>
                                    <field name="cert_password" password="True" 
                                           attrs="{'readonly': [('state', 'in', ['valid', 'expiring_soon'])]}"/>
                                </group>
                                <group>
                                    <field name="validity_from" readonly="1"/>
                                    <field name="validity_to" readonly="1"/>
                                    <field name="days_until_expiry" readonly="1" 
                                           decoration-danger="days_until_expiry &lt; 30"
                                           decoration-warning="days_until_expiry &lt; 60"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Detalles Técnicos" name="technical">
                            <group>
                                <field name="cert_subject" readonly="1"/>
                                <field name="cert_issuer" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Vista Tree: Certificados -->
    <record id="view_dte_certificate_tree" model="ir.ui.view">
        <field name="name">dte.certificate.tree</field>
        <field name="model">dte.certificate</field>
        <field name="arch" type="xml">
            <tree string="Certificados Digitales" decoration-danger="state == 'expired'" 
                  decoration-warning="state == 'expiring_soon'" decoration-success="state == 'valid'">
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="cert_rut"/>
                <field name="validity_from"/>
                <field name="validity_to"/>
                <field name="days_until_expiry"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'valid'"
                       decoration-warning="state == 'expiring_soon'"
                       decoration-danger="state == 'expired'"/>
            </tree>
        </field>
    </record>
    
    <!-- Vista Search: Certificados -->
    <record id="view_dte_certificate_search" model="ir.ui.view">
        <field name="name">dte.certificate.search</field>
        <field name="model">dte.certificate</field>
        <field name="arch" type="xml">
            <search string="Buscar Certificados">
                <field name="name"/>
                <field name="cert_rut"/>
                <field name="company_id"/>
                <filter string="Válidos" name="valid" domain="[('state', '=', 'valid')]"/>
                <filter string="Por Vencer" name="expiring_soon" domain="[('state', '=', 'expiring_soon')]"/>
                <filter string="Vencidos" name="expired" domain="[('state', '=', 'expired')]"/>
                <separator/>
                <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archivados" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Compañía" name="group_company" context="{'group_by': 'company_id'}"/>
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action: Certificados -->
    <record id="action_dte_certificate" model="ir.actions.act_window">
        <field name="name">Certificados Digitales</field>
        <field name="res_model">dte.certificate</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1, 'search_default_valid': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear el primer certificado digital
            </p>
            <p>
                Los certificados digitales se utilizan para firmar DTEs.<br/>
                Debe obtener un certificado digital clase 2 o 3 del SII.
            </p>
        </field>
    </record>
</odoo>
