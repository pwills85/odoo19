<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Tree: Comunicaciones SII -->
    <record id="view_dte_communication_tree" model="ir.ui.view">
        <field name="name">dte.communication.tree</field>
        <field name="model">dte.communication</field>
        <field name="arch" type="xml">
            <tree string="Comunicaciones SII" decoration-success="status == 'success'" 
                  decoration-danger="status == 'error'" create="false" edit="false">
                <field name="create_date"/>
                <field name="action_type"/>
                <field name="dte_type"/>
                <field name="dte_folio"/>
                <field name="track_id"/>
                <field name="status" widget="badge"/>
                <field name="duration_ms"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>
    
    <!-- Vista Form: Comunicación SII -->
    <record id="view_dte_communication_form" model="ir.ui.view">
        <field name="name">dte.communication.form</field>
        <field name="model">dte.communication</field>
        <field name="arch" type="xml">
            <form string="Comunicación SII" create="false" edit="false">
                <header>
                    <button name="action_retry" string="Reintentar" type="object" 
                            class="btn-warning" attrs="{'invisible': [('status', '!=', 'error')]}"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="action_type"/>
                            <field name="dte_type"/>
                            <field name="dte_folio"/>
                            <field name="track_id"/>
                        </group>
                        <group>
                            <field name="move_id"/>
                            <field name="purchase_id"/>
                            <field name="picking_id"/>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    
                    <group string="Timing">
                        <field name="create_date"/>
                        <field name="duration_ms"/>
                    </group>
                    
                    <notebook>
                        <page string="Request XML" name="request">
                            <field name="request_xml" widget="ace" options="{'mode': 'xml'}"/>
                        </page>
                        <page string="Response XML" name="response">
                            <group>
                                <field name="response_code"/>
                                <field name="response_message"/>
                            </group>
                            <field name="response_xml" widget="ace" options="{'mode': 'xml'}"/>
                        </page>
                        <page string="Error" name="error" attrs="{'invisible': [('error_message', '=', False)]}">
                            <field name="error_message" class="text-danger"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action: Comunicaciones -->
    <record id="action_dte_communication" model="ir.actions.act_window">
        <field name="name">Comunicaciones SII</field>
        <field name="res_model">dte.communication</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_today': 1}</field>
    </record>
</odoo>
