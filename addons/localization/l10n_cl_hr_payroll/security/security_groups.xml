<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- GRUPOS DE SEGURIDAD -->
        <!-- Patrón Odoo 19 CE: Heredar de grupos hr existentes -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        
        <record id="group_hr_payroll_user" model="res.groups">
            <field name="name">Payroll User</field>
            <!-- category_id removed in Odoo 19 -->
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
            <field name="comment">El usuario puede ver y crear liquidaciones de sueldo.</field>
        </record>

        <record id="group_hr_payroll_manager" model="res.groups">
            <field name="name">Payroll Manager</field>
            <!-- category_id removed in Odoo 19 -->
            <field name="implied_ids" eval="[(4, ref('group_hr_payroll_user')), (4, ref('hr.group_hr_manager'))]"/>
            <field name="comment">El usuario puede gestionar completamente las nóminas, incluyendo configuración.</field>
        </record>
        
    </data>
</odoo>
