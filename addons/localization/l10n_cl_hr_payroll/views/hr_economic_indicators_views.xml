<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- VISTA FORM: hr.economic.indicators -->
    <!-- ═══════════════════════════════════════════════════════════ -->
    
    <record id="view_hr_economic_indicators_form" model="ir.ui.view">
        <field name="name">hr.economic.indicators.form</field>
        <field name="model">hr.economic.indicators</field>
        <field name="arch" type="xml">
            <form string="Indicadores Económicos">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group name="period">
                            <field name="period" required="1"/>
                        </group>
                    </group>
                    
                    <group string="Indicadores Principales">
                        <group>
                            <field name="uf" required="1"/>
                            <field name="utm" required="1"/>
                            <field name="uta" required="1"/>
                        </group>
                        <group>
                            <field name="minimum_wage" required="1"/>
                            <field name="afp_limit"/>
                        </group>
                    </group>
                    
                    <group string="Asignaciones Familiares">
                        <group>
                            <field name="family_allowance_t1"/>
                            <field name="family_allowance_t2"/>
                        </group>
                        <group>
                            <field name="family_allowance_t3"/>
                        </group>
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- VISTA TREE: hr.economic.indicators -->
    <!-- ═══════════════════════════════════════════════════════════ -->
    
    <record id="view_hr_economic_indicators_tree" model="ir.ui.view">
        <field name="name">hr.economic.indicators.tree</field>
        <field name="model">hr.economic.indicators</field>
        <field name="arch" type="xml">
            <tree string="Indicadores Económicos">
                <field name="period"/>
                <field name="uf"/>
                <field name="utm"/>
                <field name="uta"/>
                <field name="minimum_wage"/>
                <field name="afp_limit"/>
            </tree>
        </field>
    </record>
    
    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- ACTION: hr.economic.indicators -->
    <!-- ═══════════════════════════════════════════════════════════ -->
    
    <record id="action_hr_economic_indicators" model="ir.actions.act_window">
        <field name="name">Indicadores Económicos</field>
        <field name="res_model">hr.economic.indicators</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear indicadores económicos mensuales
            </p>
            <p>
                Los indicadores económicos (UF, UTM, UTA) son necesarios para
                calcular las liquidaciones de sueldo.
            </p>
        </field>
    </record>
    
</odoo>
