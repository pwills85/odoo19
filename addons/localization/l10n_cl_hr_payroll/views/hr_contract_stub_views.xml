<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista Form: hr.contract (CE Stub) -->
    <record id="hr_contract_view_form" model="ir.ui.view">
        <field name="name">hr.contract.form.ce.stub</field>
        <field name="model">hr.contract</field>
        <field name="arch" type="xml">
            <form string="Contrato Laboral">
                <header>
                    <button name="action_set_running" string="Activar" type="object"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_set_close" string="Finalizar" type="object"
                            invisible="state != 'running'"/>
                    <button name="action_set_draft" string="Volver a Borrador" type="object"
                            invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,running,close"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nombre del contrato"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Información General">
                            <field name="employee_id" required="1"/>
                            <field name="contract_type_id"/>
                        </group>
                        <group string="Fechas">
                            <field name="date_start" required="1"/>
                            <field name="date_end"/>
                        </group>
                    </group>

                    <group>
                        <group string="Remuneración">
                            <field name="wage" required="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group>
                            <!-- Placeholder for Chilean extensions -->
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista List: hr.contract (CE Stub) -->
    <record id="hr_contract_view_list" model="ir.ui.view">
        <field name="name">hr.contract.list.ce.stub</field>
        <field name="model">hr.contract</field>
        <field name="arch" type="xml">
            <list string="Contratos">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="contract_type_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="wage" widget="monetary"/>
                <field name="state" widget="badge"
                       decoration-info="state=='draft'"
                       decoration-success="state=='running'"
                       decoration-muted="state=='close'"/>
            </list>
        </field>
    </record>

    <!-- Acción: Contratos -->
    <record id="action_hr_contract" model="ir.actions.act_window">
        <field name="name">Contratos</field>
        <field name="res_model">hr.contract</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo contrato laboral
            </p>
            <p>
                Los contratos definen los términos de empleo de los trabajadores.
            </p>
        </field>
    </record>

    <!-- Menú: Contratos (bajo Empleados > Contratos) -->
    <menuitem id="menu_hr_contract"
              name="Contratos"
              parent="hr.menu_hr_employee_payroll"
              action="action_hr_contract"
              sequence="10"/>

</odoo>
