<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- VISTA TREE: hr.afp -->
    <!-- ═══════════════════════════════════════════════════════════ -->
    
    <record id="view_hr_afp_tree" model="ir.ui.view">
        <field name="name">hr.afp.tree</field>
        <field name="model">hr.afp</field>
        <field name="arch" type="xml">
            <list string="AFPs Chile" editable="bottom">
                <field name="name"/>
                <field name="code"/>
                <field name="rate"/>
                <field name="sis_rate"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    
    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- ACTION: hr.afp -->
    <!-- ═══════════════════════════════════════════════════════════ -->
    
    <record id="action_hr_afp" model="ir.actions.act_window">
        <field name="name">AFPs</field>
        <field name="res_model">hr.afp</field>
        <field name="view_mode">tree</field>
    </record>
    
</odoo>
