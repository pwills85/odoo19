<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- VISTA TREE: hr.afp -->
    <!-- HIGH-007: Campo last_update_date con badge de advertencia -->
    <!-- ═══════════════════════════════════════════════════════════ -->
    
    <record id="view_hr_afp_tree" model="ir.ui.view">
        <field name="name">hr.afp.tree</field>
        <field name="model">hr.afp</field>
        <field name="arch" type="xml">
            <list string="AFPs Chile" editable="bottom">
                <field name="name"/>
                <field name="code"/>
                <field name="rate"/>
                <field name="sis_rate"/>
                <field name="last_update_date" 
                       optional="show"
                       decoration-warning="last_update_date and (context_today() - last_update_date).days > 40"
                       decoration-success="last_update_date and (context_today() - last_update_date).days &lt;= 40"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    
    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- VISTA FORM: hr.afp -->
    <!-- HIGH-007: Información detallada actualización automática -->
    <!-- ═══════════════════════════════════════════════════════════ -->
    
    <record id="view_hr_afp_form" model="ir.ui.view">
        <field name="name">hr.afp.form</field>
        <field name="model">hr.afp</field>
        <field name="arch" type="xml">
            <form string="AFP Chile">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    
                    <group>
                        <group string="Información General">
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group string="Tasas">
                            <field name="rate"/>
                            <field name="sis_rate"/>
                        </group>
                    </group>
                    
                    <group string="Actualización Automática (HIGH-007)">
                        <field name="last_update_date" readonly="1"/>
                        <div class="alert alert-warning" 
                             role="alert"
                             invisible="not last_update_date or (context_today() - last_update_date).days &lt;= 40">
                            <strong>⚠️ Advertencia:</strong> Comisión AFP sin actualizar hace más de 40 días.
                            <br/>Última actualización: <field name="last_update_date" readonly="1"/>
                            <br/>Verifique el cron job mensual o ejecute actualización manual.
                        </div>
                    </group>
                </sheet>
                
                <!-- Chatter para audit trail -->
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- ACTION: hr.afp -->
    <!-- ═══════════════════════════════════════════════════════════ -->
    
    <record id="action_hr_afp" model="ir.actions.act_window">
        <field name="name">AFPs</field>
        <field name="res_model">hr.afp</field>
        <field name="view_mode">tree,form</field>
    </record>
    
</odoo>
