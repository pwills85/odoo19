<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- VISTA FORM: hr.payslip -->
    <!-- ═══════════════════════════════════════════════════════════ -->
    
    <record id="view_hr_payslip_form" model="ir.ui.view">
        <field name="name">hr.payslip.form</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <form string="Liquidación de Sueldo">
                <header>
                    <button name="action_compute_sheet" 
                            string="Calcular" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_verify" 
                            string="Enviar a Revisión" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="validate_with_ai"
                            string="Validar con IA"
                            type="object"
                            class="btn-primary"
                            icon="fa-magic"
                            invisible="state not in ['draft', 'verify'] or ai_validation_status == 'disabled'"/>
                    <button name="action_done" 
                            string="Marcar como Pagado" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state != 'verify'"/>
                    <button name="action_draft" 
                            string="Volver a Borrador" 
                            type="object"
                            invisible="state not in ['verify', 'cancel']"/>
                    <button name="action_cancel" 
                            string="Cancelar" 
                            type="object"
                            invisible="state in ['done', 'cancel']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,verify,done"/>
                </header>
                <sheet>
                    <!-- AI Validation Button -->
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="validate_with_ai"
                                icon="fa-magic"
                                invisible="ai_validation_status == 'disabled'">
                            <field name="ai_validation_status" widget="badge"
                                   decoration-success="ai_validation_status == 'approved'"
                                   decoration-warning="ai_validation_status in ['review', 'pending']"
                                   decoration-danger="ai_validation_status == 'rejected'"
                                   decoration-info="ai_validation_status == 'pending'"/>
                            <div class="o_stat_info">
                                <span class="o_stat_text">Validación IA</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="number" readonly="1" placeholder="Número automático"/>
                        </h1>
                    </div>
                    <group>
                        <group name="employee_info">
                            <field name="employee_id" 
                                   required="1"
                                   readonly="state != 'draft'"/>
                            <field name="contract_id" 
                                   required="1"
                                   readonly="state != 'draft'"
                                   domain="[('employee_id', '=', employee_id), ('state', 'in', ['open', 'pending'])]"/>
                            <field name="company_id" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group name="period_info">
                            <field name="date_from" 
                                   required="1"
                                   readonly="state != 'draft'"/>
                            <field name="date_to" 
                                   required="1"
                                   readonly="state != 'draft'"/>
                            <field name="indicadores_id" 
                                   readonly="1"
                                   string="Indicadores Económicos"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Líneas de Liquidación" name="lines">
                            <field name="line_ids" readonly="state != 'draft'">
                                <list editable="bottom" decoration-success="total > 0" decoration-danger="total &lt; 0">
                                    <field name="sequence" widget="handle"/>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="category_id"/>
                                    <field name="amount" sum="Total Base"/>
                                    <field name="quantity"/>
                                    <field name="rate"/>
                                    <field name="total" sum="Total"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="basic_wage" widget="monetary"/>
                                <field name="gross_wage" widget="monetary" class="oe_subtotal_footer_separator"/>
                                <field name="total_deductions" widget="monetary"/>
                                <field name="net_wage" widget="monetary" class="oe_subtotal_footer_separator" style="font-weight: bold;"/>
                            </group>
                        </page>
                        
                        <page string="Inputs Adicionales" name="inputs">
                            <field name="input_line_ids" readonly="state != 'draft'">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="amount"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Notas" name="notes">
                            <field name="notes" placeholder="Notas internas..."/>
                        </page>
                        
                        <page string="Auditoría" name="audit">
                            <group>
                                <group>
                                    <field name="computed_date" readonly="1"/>
                                    <field name="computed_by" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        
                        <!-- AI Validation Tab -->
                        <page string="Validación IA" name="ai_validation"
                              invisible="ai_validation_status == 'disabled'">
                            <group>
                                <group string="Estado Validación">
                                    <field name="ai_validation_status" widget="badge"
                                           decoration-success="ai_validation_status == 'approved'"
                                           decoration-warning="ai_validation_status == 'review'"
                                           decoration-danger="ai_validation_status == 'rejected'"
                                           decoration-info="ai_validation_status == 'pending'"/>
                                    <field name="ai_confidence" widget="progressbar"/>
                                    <field name="ai_validation_date" readonly="1"/>
                                </group>
                                <group string="Resultados">
                                    <field name="ai_errors" widget="text"
                                           invisible="not ai_errors"
                                           class="text-danger"/>
                                    <field name="ai_warnings" widget="text"
                                           invisible="not ai_warnings"
                                           class="text-warning"/>
                                </group>
                            </group>
                            
                            <div class="alert alert-info" role="alert"
                                 invisible="ai_validation_status != 'pending'">
                                <p><i class="fa fa-info-circle"/> Esta liquidación aún no ha sido validada con IA.</p>
                                <p>Click en <b>"Validar con IA"</b> para obtener validación automática.</p>
                            </div>
                            
                            <div class="alert alert-success" role="alert"
                                 invisible="ai_validation_status != 'approved'">
                                <p><i class="fa fa-check-circle"/> ✅ <b>Validación IA Aprobada</b></p>
                                <p>Confianza: <field name="ai_confidence" nolabel="1"/>%</p>
                            </div>
                            
                            <div class="alert alert-warning" role="alert"
                                 invisible="ai_validation_status != 'review'">
                                <p><i class="fa fa-exclamation-triangle"/> ⚠️ <b>Requiere Revisión Manual</b></p>
                                <p>Revise las advertencias arriba antes de confirmar.</p>
                            </div>
                            
                            <div class="alert alert-danger" role="alert"
                                 invisible="ai_validation_status != 'rejected'">
                                <p><i class="fa fa-times-circle"/> ❌ <b>Validación Rechazada</b></p>
                                <p>Corrija los errores críticos arriba antes de intentar confirmar.</p>
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- VISTA TREE: hr.payslip -->
    <!-- ═══════════════════════════════════════════════════════════ -->
    
    <record id="view_hr_payslip_tree" model="ir.ui.view">
        <field name="name">hr.payslip.tree</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <list string="Liquidaciones" 
                  decoration-info="state == 'draft'" 
                  decoration-warning="state == 'verify'"
                  decoration-success="state == 'done'"
                  decoration-muted="state == 'cancel'">
                <field name="number"/>
                <field name="employee_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="basic_wage" sum="Total Sueldo Base"/>
                <field name="net_wage" sum="Total Líquido"/>
                <field name="state" 
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'verify'"
                       decoration-success="state == 'done'"
                       decoration-muted="state == 'cancel'"
                       widget="badge"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>
    
