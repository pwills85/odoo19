<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista Tree: Estructura Salarial -->
    <record id="view_hr_payroll_structure_tree" model="ir.ui.view">
        <field name="name">hr.payroll.structure.tree</field>
        <field name="model">hr.payroll.structure</field>
        <field name="arch" type="xml">
            <list string="Estructuras Salariales">
                <field name="name"/>
                <field name="code"/>
                <field name="rule_count" string="Reglas"/>
                <field name="parent_id"/>
            </list>
        </field>
    </record>

    <!-- Vista Form: Estructura Salarial -->
    <record id="view_hr_payroll_structure_form" model="ir.ui.view">
        <field name="name">hr.payroll.structure.form</field>
        <field name="model">hr.payroll.structure</field>
        <field name="arch" type="xml">
            <form string="Estructura Salarial">
                <header>
                    <button name="action_view_rules" string="Ver Reglas" type="object"
                            class="oe_highlight" invisible="rule_count == 0"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_rules" type="object"
                                class="oe_stat_button" icon="fa-list">
                            <field name="rule_count" string="Reglas" widget="statinfo"/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Archivado" bg_color="bg-danger"
                            invisible="active == True"/>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="ej: Estructura Base Chile"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="parent_id"/>
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Reglas Salariales" name="rules">
                            <field name="rule_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="category_id"/>
                                    <field name="amount_select"/>
                                    <field name="active" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Estructuras Hijas" name="children"
                              invisible="not children_ids">
                            <field name="children_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="rule_count"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Notas" name="notes">
                            <field name="note" placeholder="Descripci贸n o notas adicionales..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acci贸n: Estructuras Salariales -->
    <record id="action_hr_payroll_structure" model="ir.actions.act_window">
        <field name="name">Estructuras Salariales</field>
        <field name="res_model">hr.payroll.structure</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva estructura salarial
            </p>
            <p>
                Las estructuras agrupan reglas salariales y definen c贸mo se calculan las n贸minas.
            </p>
        </field>
    </record>

</odoo>
