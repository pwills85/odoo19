<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- WIZARD: IMPORTAR CSV RCV DEL SII -->
    <!-- ============================================================ -->

    <!-- FORM VIEW: PASO 1 - UPLOAD -->
    <record id="view_rcv_csv_import_wizard_form" model="ir.ui.view">
        <field name="name">rcv.csv.import.wizard.form</field>
        <field name="model">rcv.csv.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar CSV RCV desde SII">
                <!-- Header con instrucciones -->
                <div class="alert alert-info" role="status" invisible="state == 'result'">
                    <p class="fw-bold mb-2">ℹ️ Cómo usar esta herramienta</p>
                    <hr/>
                    <p><strong>Paso 1:</strong> Descargue el CSV RCV desde el portal SII</p>
                    <ul>
                        <li>Ingrese a: <a href="https://www4.sii.cl/registrocompraven taoperacionesconsulta/" target="_blank">
                            Portal SII - Registro de Compras y Ventas</a></li>
                        <li>Autentíquese con su certificado digital</li>
                        <li>Seleccione el período a validar</li>
                        <li>Descargue el archivo CSV</li>
                    </ul>
                    <p><strong>Paso 2:</strong> Suba el archivo CSV en este formulario</p>
                    <p><strong>Paso 3:</strong> El sistema comparará automáticamente con registros Odoo</p>
                </div>

                <sheet>
                    <!-- PASO 1: UPLOAD CSV -->
                    <group invisible="state == 'result'">
                        <group>
                            <field name="company_id" options="{'no_create': True}"/>
                            <field name="period_date"/>
                        </group>
                        <group>
                            <field name="csv_file" filename="csv_filename"/>
                            <field name="csv_filename" invisible="1"/>
                        </group>
                    </group>

                    <!-- PASO 2: RESULTADOS -->
                    <group invisible="state != 'result'">
                        <field name="result_message" nolabel="1"/>

                        <group string="Estadísticas">
                            <field name="sii_records_count"/>
                            <field name="odoo_records_count"/>
                            <field name="matched_count"/>
                            <field name="discrepancy_count"
                                   class="text-danger"
                                   invisible="discrepancy_count == 0"/>
                        </group>
                    </group>

                    <!-- Estado oculto -->
                    <field name="state" invisible="1"/>
                </sheet>

                <footer>
                    <!-- Botones PASO 1 -->
                    <button string="Importar y Validar"
                            name="action_import_and_validate"
                            type="object"
                            class="btn-primary"
                            invisible="state == 'result'"/>

                    <button string="Cancelar"
                            class="btn-secondary"
                            special="cancel"
                            invisible="state == 'result'"/>

                    <!-- Botones PASO 2 -->
                    <button string="Ver Discrepancias"
                            name="action_view_discrepancies"
                            type="object"
                            class="btn-warning"
                            invisible="state != 'result' or discrepancy_count == 0"/>

                    <button string="Nueva Importación"
                            name="action_reset"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'result'"/>

                    <button string="Cerrar"
                            class="btn-secondary"
                            special="cancel"
                            invisible="state != 'result'"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ACTION WINDOW -->
    <record id="action_rcv_csv_import_wizard" model="ir.actions.act_window">
        <field name="name">Importar CSV RCV desde SII</field>
        <field name="res_model">rcv.csv.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_l10n_cl_rcv_period"/>
        <field name="binding_view_types">form,list</field>
    </record>

</odoo>
