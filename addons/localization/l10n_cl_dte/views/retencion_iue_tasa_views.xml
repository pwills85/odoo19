<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ═══════════════════════════════════════════════════════════
         TASAS DE RETENCIÓN IUE - VISTAS
         ═══════════════════════════════════════════════════════════ -->

    <!-- Tree View -->
    <record id="view_retencion_iue_tasa_tree" model="ir.ui.view">
        <field name="name">l10n_cl.retencion_iue.tasa.tree</field>
        <field name="model">l10n_cl.retencion_iue.tasa</field>
        <field name="arch" type="xml">
            <list string="Tasas de Retención IUE" decoration-success="es_vigente==True" decoration-muted="active==False">
                <field name="fecha_inicio"/>
                <field name="fecha_termino"/>
                <field name="tasa_retencion" widget="percentage"/>
                <field name="referencia_legal"/>
                <field name="es_vigente" invisible="1"/>
                <field name="active" invisible="1"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_retencion_iue_tasa_form" model="ir.ui.view">
        <field name="name">l10n_cl.retencion_iue.tasa.form</field>
        <field name="model">l10n_cl.retencion_iue.tasa</field>
        <field name="arch" type="xml">
            <form string="Tasa de Retención IUE">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(l10n_cl_dte.action_boleta_honorarios)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-file-text-o"
                                context="{'search_default_tasa_retencion': tasa_retencion}">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Boletas</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="tasa_retencion" class="oe_edit_only"/>
                        <h1>
                            <field name="tasa_retencion" class="oe_inline" widget="percentage"/> Retención
                        </h1>
                    </div>

                    <group>
                        <group name="vigencia" string="Vigencia">
                            <field name="fecha_inicio" required="1"/>
                            <field name="fecha_termino"/>
                            <field name="es_vigente" readonly="1" widget="boolean"/>
                        </group>
                        <group name="info_legal" string="Información Legal">
                            <field name="referencia_legal" placeholder="ej: Ley 21.210"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>

                    <group>
                        <field name="notas" nolabel="1" placeholder="Observaciones sobre esta tasa de retención..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_retencion_iue_tasa_search" model="ir.ui.view">
        <field name="name">l10n_cl.retencion_iue.tasa.search</field>
        <field name="model">l10n_cl.retencion_iue.tasa</field>
        <field name="arch" type="xml">
            <search string="Buscar Tasas de Retención">
                <field name="tasa_retencion"/>
                <field name="referencia_legal"/>
                <separator/>
                <filter string="Vigentes" name="filter_vigente" domain="[('es_vigente', '=', True)]"/>
                <filter string="Históricas" name="filter_historicas" domain="[('fecha_termino', '!=', False)]"/>
                <separator/>
                <filter string="Archivadas" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Año Inicio" name="group_by_year" context="{'group_by': 'fecha_inicio:year'}"/>
                <filter string="Compañía" name="group_by_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_retencion_iue_tasa" model="ir.actions.act_window">
        <field name="name">Tasas de Retención IUE</field>
        <field name="res_model">l10n_cl.retencion_iue.tasa</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_vigente': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear primera tasa de retención IUE
            </p>
            <p>
                Las tasas de retención IUE (Impuesto Único Segunda Categoría) varían según el año.<br/>
                Puede usar el asistente para crear automáticamente las tasas históricas de Chile (2018-2025).
            </p>
        </field>
    </record>

</odoo>
