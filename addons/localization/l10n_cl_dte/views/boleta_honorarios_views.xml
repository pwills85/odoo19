<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ═══════════════════════════════════════════════════════════
         BOLETA DE HONORARIOS - VISTAS
         ═══════════════════════════════════════════════════════════ -->

    <!-- Tree View -->
    <record id="view_boleta_honorarios_tree" model="ir.ui.view">
        <field name="name">l10n_cl.boleta_honorarios.tree</field>
        <field name="model">l10n_cl.boleta_honorarios</field>
        <field name="arch" type="xml">
            <tree string="Boletas de Honorarios"
                  decoration-info="state=='draft'"
                  decoration-success="state=='paid'"
                  decoration-warning="state=='validated'"
                  decoration-muted="state=='cancelled'">
                <field name="numero_boleta"/>
                <field name="fecha_emision"/>
                <field name="profesional_id"/>
                <field name="profesional_rut"/>
                <field name="monto_bruto" sum="Total Bruto"/>
                <field name="tasa_retencion" widget="percentage"/>
                <field name="monto_retencion" sum="Total Retenido"/>
                <field name="monto_liquido" sum="Total Líquido"/>
                <field name="vendor_bill_id"/>
                <field name="state" widget="badge"
                       decoration-info="state=='draft'"
                       decoration-success="state=='paid'"
                       decoration-warning="state in ['validated', 'accounted']"
                       decoration-danger="state=='cancelled'"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_boleta_honorarios_form" model="ir.ui.view">
        <field name="name">l10n_cl.boleta_honorarios.form</field>
        <field name="model">l10n_cl.boleta_honorarios</field>
        <field name="arch" type="xml">
            <form string="Boleta de Honorarios">
                <header>
                    <button name="action_validate" string="Validar" type="object"
                            class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_create_vendor_bill" string="Crear Factura Proveedor" type="object"
                            class="oe_highlight" attrs="{'invisible': ['|', ('state', 'not in', ['validated', 'accounted']), ('vendor_bill_id', '!=', False)]}"/>
                    <button name="action_generate_certificado" string="Generar Certificado" type="object"
                            attrs="{'invisible': ['|', ('vendor_bill_id', '=', False), ('certificado_generado', '=', True)]}"/>
                    <button name="action_mark_paid" string="Marcar como Pagada" type="object"
                            attrs="{'invisible': [('state', '!=', 'accounted')]}"/>
                    <button name="action_cancel" string="Cancelar" type="object"
                            attrs="{'invisible': [('state', 'in', ['paid', 'cancelled'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,validated,accounted,paid"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(account.action_move_in_invoice_type)d" type="action"
                                class="oe_stat_button" icon="fa-pencil-square-o"
                                attrs="{'invisible': [('vendor_bill_id', '=', False)]}"
                                context="{'default_move_type': 'in_invoice', 'search_default_id': vendor_bill_id}">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Factura</span>
                                <span class="o_stat_value"><field name="vendor_bill_state"/></span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="numero_boleta" class="oe_edit_only"/>
                        <h1>
                            <field name="numero_boleta" placeholder="N° Boleta..." required="1"/>
                        </h1>
                    </div>

                    <group>
                        <group name="boleta_info" string="Información Boleta">
                            <field name="fecha_emision" required="1"/>
                            <field name="profesional_id" required="1"
                                   options="{'no_create': True, 'no_open': True}"
                                   domain="[('is_company', '=', False)]"/>
                            <field name="profesional_rut" readonly="1"/>
                            <field name="profesional_email" readonly="1"/>
                        </group>
                        <group name="montos" string="Montos">
                            <field name="currency_id" invisible="1"/>
                            <field name="monto_bruto" required="1" widget="monetary"/>
                            <field name="tasa_retencion" readonly="1" widget="percentage"/>
                            <field name="monto_retencion" readonly="1" widget="monetary"/>
                            <field name="monto_liquido" readonly="1" widget="monetary" class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>

                    <group string="Descripción de Servicios">
                        <field name="descripcion_servicios" nolabel="1" required="1"
                               placeholder="Detalle de los servicios profesionales prestados..."/>
                    </group>

                    <group name="facturacion" string="Facturación" attrs="{'invisible': [('vendor_bill_id', '=', False)]}">
                        <field name="vendor_bill_id" readonly="1"/>
                        <field name="vendor_bill_state" readonly="1" invisible="1"/>
                    </group>

                    <group name="certificado" string="Certificado de Retención" attrs="{'invisible': [('certificado_generado', '=', False)]}">
                        <field name="certificado_generado" readonly="1"/>
                        <field name="certificado_fecha" readonly="1"/>
                    </group>

                    <group string="Notas Adicionales">
                        <field name="notas" nolabel="1" placeholder="Observaciones adicionales..."/>
                    </group>

                    <group>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_boleta_honorarios_search" model="ir.ui.view">
        <field name="name">l10n_cl.boleta_honorarios.search</field>
        <field name="model">l10n_cl.boleta_honorarios</field>
        <field name="arch" type="xml">
            <search string="Buscar Boletas de Honorarios">
                <field name="numero_boleta"/>
                <field name="profesional_id"/>
                <field name="profesional_rut"/>
                <field name="descripcion_servicios"/>
                <separator/>
                <filter string="Borradores" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Validadas" name="filter_validated" domain="[('state', '=', 'validated')]"/>
                <filter string="Contabilizadas" name="filter_accounted" domain="[('state', '=', 'accounted')]"/>
                <filter string="Pagadas" name="filter_paid" domain="[('state', '=', 'paid')]"/>
                <separator/>
                <filter string="Sin Factura" name="filter_no_bill" domain="[('vendor_bill_id', '=', False)]"/>
                <filter string="Con Factura" name="filter_with_bill" domain="[('vendor_bill_id', '!=', False)]"/>
                <separator/>
                <filter string="Sin Certificado" name="filter_no_cert" domain="[('certificado_generado', '=', False)]"/>
                <filter string="Con Certificado" name="filter_with_cert" domain="[('certificado_generado', '=', True)]"/>
                <separator/>
                <filter string="Mes Actual" name="filter_current_month"
                        domain="[('fecha_emision', '>=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('fecha_emision', '&lt;', (context_today() + relativedelta(months=1, day=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Año Actual" name="filter_current_year"
                        domain="[('fecha_emision', '>=', (context_today() + relativedelta(month=1, day=1)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Profesional" name="group_by_profesional" context="{'group_by': 'profesional_id'}"/>
                    <filter string="Estado" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Mes Emisión" name="group_by_month" context="{'group_by': 'fecha_emision:month'}"/>
                    <filter string="Año Emisión" name="group_by_year" context="{'group_by': 'fecha_emision:year'}"/>
                    <filter string="Compañía" name="group_by_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_boleta_honorarios" model="ir.actions.act_window">
        <field name="name">Boletas de Honorarios</field>
        <field name="res_model">l10n_cl.boleta_honorarios</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_current_year': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Registrar primera Boleta de Honorarios
            </p>
            <p>
                Las Boletas de Honorarios son documentos emitidos por profesionales independientes.<br/>
                El sistema calcula automáticamente la retención IUE según el año de emisión.
            </p>
        </field>
    </record>

</odoo>
