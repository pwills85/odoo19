<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- VISTAS: l10n.cl.comuna (Catálogo Comunas de Chile)         -->
    <!-- ═══════════════════════════════════════════════════════════ -->

    <!-- List View -->
    <record id="view_l10n_cl_comuna_tree" model="ir.ui.view">
        <field name="name">l10n.cl.comuna.tree</field>
        <field name="model">l10n.cl.comuna</field>
        <field name="arch" type="xml">
            <list string="Comunas de Chile" default_order="state_id,name">
                <field name="code" string="Código SII"/>
                <field name="name" string="Comuna"/>
                <field name="state_id" string="Región"/>
                <field name="treasury_code" string="Cód. Tesorería" optional="hide"/>
                <field name="partner_count" string="Contactos" widget="statinfo"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_l10n_cl_comuna_form" model="ir.ui.view">
        <field name="name">l10n.cl.comuna.form</field>
        <field name="model">l10n.cl.comuna</field>
        <field name="arch" type="xml">
            <form string="Comuna">
                <header>
                    <button name="action_view_partners"
                            type="object"
                            string="Ver Contactos"
                            class="oe_highlight"
                            invisible="partner_count == 0"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button"
                                type="object"
                                name="action_view_partners"
                                icon="fa-users"
                                invisible="partner_count == 0">
                            <field name="partner_count" widget="statinfo" string="Contactos"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Inactiva" bg_color="text-bg-danger"
                            invisible="active"/>

                    <group>
                        <group string="Información SII">
                            <field name="code" placeholder="09201"/>
                            <field name="name" placeholder="Temuco"/>
                            <field name="treasury_code" placeholder="227"/>
                        </group>
                        <group string="Ubicación">
                            <field name="state_id" placeholder="Seleccione región..."/>
                            <field name="active"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Información">
                            <group>
                                <group>
                                    <label for="code" string="Código SII"/>
                                    <div class="o_row">
                                        <span>Formato: RRPPP (5 dígitos)</span>
                                    </div>
                                    <label for="treasury_code" string="Código Tesorería"/>
                                    <div class="o_row">
                                        <span>Código usado por Tesorería (3 dígitos)</span>
                                    </div>
                                </group>
                            </group>
                            <div class="alert alert-info mt-3" role="alert">
                                <h6><strong>ℹ️ Catálogo Oficial SII:</strong></h6>
                                <ul>
                                    <li><strong>Fuente:</strong> https://zeus.sii.cl/avalu_cgi/br/brch10.sh</li>
                                    <li><strong>Total:</strong> 347 comunas oficiales de Chile</li>
                                    <li><strong>Formato código:</strong> RRPPP (Región + Comuna)</li>
                                    <li><strong>Uso:</strong> Emisión de DTEs (campo CmnaOrigen/CmnaRecep)</li>
                                </ul>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_l10n_cl_comuna_search" model="ir.ui.view">
        <field name="name">l10n.cl.comuna.search</field>
        <field name="model">l10n.cl.comuna</field>
        <field name="arch" type="xml">
            <search string="Buscar Comunas">
                <field name="name"/>
                <field name="code"/>
                <field name="state_id"/>

                <filter string="Activas" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivas" name="inactive" domain="[('active', '=', False)]"/>

                <separator/>
                <filter name="group_by_region" string="Región" context="{'group_by': 'state_id'}"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_l10n_cl_comuna" model="ir.actions.act_window">
        <field name="name">Comunas de Chile</field>
        <field name="res_model">l10n.cl.comuna</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1, 'search_default_group_by_region': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Catálogo de Comunas de Chile
            </p>
            <p>
                Este catálogo contiene las <strong>347 comunas oficiales</strong>
                de Chile según el SII.<br/>
                <br/>
                <strong>Uso en DTEs:</strong><br/>
                • Campo &lt;CmnaOrigen&gt; (Comuna emisor)<br/>
                • Campo &lt;CmnaRecep&gt; (Comuna receptor)<br/>
                <br/>
                <strong>Fuente oficial:</strong><br/>
                https://zeus.sii.cl/avalu_cgi/br/brch10.sh
            </p>
        </field>
    </record>

    <!-- Menu Item (dentro de Configuración DTE) -->
    <menuitem id="menu_l10n_cl_comuna"
              name="Comunas"
              parent="menu_dte_configuration"
              action="action_l10n_cl_comuna"
              sequence="35"/>

</odoo>
