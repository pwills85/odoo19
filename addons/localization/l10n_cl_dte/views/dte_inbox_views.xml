<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- DTE INBOX VIEWS -->
    <!-- ═══════════════════════════════════════════════════════════ -->

    <!-- Tree View -->
    <record id="view_dte_inbox_tree" model="ir.ui.view">
        <field name="name">dte.inbox.tree</field>
        <field name="model">dte.inbox</field>
        <field name="arch" type="xml">
            <list decoration-success="state=='accepted'"
                  decoration-danger="state=='rejected'"
                  decoration-warning="state in ('claimed', 'error')"
                  decoration-info="state=='new'"
                  decoration-muted="state=='invoiced'">
                <field name="received_date"/>
                <field name="dte_type"/>
                <field name="folio"/>
                <field name="emisor_name"/>
                <field name="emisor_rut"/>
                <field name="fecha_emision"/>
                <field name="monto_total" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
                <field name="state" widget="badge"
                       decoration-success="state=='accepted'"
                       decoration-danger="state=='rejected'"
                       decoration-warning="state=='claimed'"
                       decoration-info="state in ('new', 'validated', 'matched')"/>
                <field name="purchase_order_id"/>
                <field name="invoice_id"/>
                <field name="response_sent" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_dte_inbox_form" model="ir.ui.view">
        <field name="name">dte.inbox.form</field>
        <field name="model">dte.inbox</field>
        <field name="arch" type="xml">
            <form string="Received DTE">
                <header>
                    <button name="action_validate" type="object"
                            string="Validate"
                            class="oe_highlight"
                            invisible="state != 'new'"/>
                    <button name="action_create_invoice" type="object"
                            string="Create Invoice"
                            class="oe_highlight"
                            invisible="state not in ('validated', 'matched')"/>
                    <button name="action_open_commercial_response_wizard" type="object"
                            string="Send Response to SII"
                            class="btn-primary"
                            invisible="state not in ('validated', 'matched', 'accepted') or response_sent"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="new,validated,matched,accepted,invoiced"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="dte_type"/>
                            <field name="folio"/>
                            <field name="fecha_emision"/>
                            <field name="received_date"/>
                            <field name="received_via"/>
                        </group>
                        <group>
                            <field name="partner_id"
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="emisor_rut"/>
                            <field name="emisor_name"/>
                            <field name="emisor_email"/>
                            <field name="emisor_phone"/>
                        </group>
                    </group>

                    <group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="monto_neto" widget="monetary"/>
                            <field name="monto_iva" widget="monetary"/>
                            <field name="monto_exento" widget="monetary"/>
                            <field name="monto_total" widget="monetary" class="oe_subtotal_footer_separator"/>
                        </group>
                        <group>
                            <field name="purchase_order_id"/>
                            <field name="po_match_confidence" widget="percentage"/>
                            <field name="invoice_id"/>
                        </group>
                    </group>

                    <group string="Commercial Response"
                           invisible="not response_sent">
                        <group>
                            <field name="response_code"/>
                            <field name="response_sent" widget="boolean"/>
                            <field name="response_date"/>
                        </group>
                        <group>
                            <field name="response_track_id"/>
                            <field name="response_reason"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Validation" name="validation">
                            <group>
                                <field name="validation_errors" widget="text"
                                       invisible="not validation_errors"/>
                                <field name="validation_warnings" widget="text"
                                       invisible="not validation_warnings"/>
                            </group>
                        </page>

                        <page string="Raw XML" name="xml">
                            <field name="raw_xml" widget="ace" options="{'mode': 'xml'}"/>
                        </page>

                        <page string="Parsed Data" name="parsed">
                            <field name="parsed_data" widget="ace" options="{'mode': 'json'}"/>
                        </page>

                        <page string="Supplier Details" name="supplier">
                            <group>
                                <group>
                                    <field name="emisor_address"/>
                                    <field name="emisor_city"/>
                                </group>
                                <group>
                                    <field name="company_id" groups="base.group_multi_company"/>
                                    <field name="processed_date"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_dte_inbox_kanban" model="ir.ui.view">
        <field name="name">dte.inbox.kanban</field>
        <field name="model">dte.inbox</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="dte_type"/>
                <field name="folio"/>
                <field name="emisor_name"/>
                <field name="monto_total"/>
                <field name="currency_id"/>
                <field name="state"/>
                <field name="fecha_emision"/>
                <field name="purchase_order_id"/>
                <field name="response_sent"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <span class="badge badge-pill">
                                        <field name="dte_type"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="emisor_name"/>
                                    <div class="text-muted">
                                        <i class="fa fa-calendar" title="Fecha de Emisión" aria-label="Fecha"/> <field name="fecha_emision"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="monto_total" widget="monetary"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.purchase_order_id.raw_value">
                                            <i class="fa fa-shopping-cart"/> PO
                                        </span>
                                        <span t-if="record.response_sent.raw_value" class="badge badge-success">
                                            <i class="fa fa-check"/> Responded
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_dte_inbox_search" model="ir.ui.view">
        <field name="name">dte.inbox.search</field>
        <field name="model">dte.inbox</field>
        <field name="arch" type="xml">
            <search>
                <field name="folio"/>
                <field name="emisor_name"/>
                <field name="emisor_rut"/>
                <field name="purchase_order_id"/>
                <field name="invoice_id"/>

                <filter string="New" name="filter_new"
                        domain="[('state', '=', 'new')]"/>
                <filter string="Validated" name="filter_validated"
                        domain="[('state', '=', 'validated')]"/>
                <filter string="Matched with PO" name="filter_matched"
                        domain="[('state', '=', 'matched')]"/>
                <filter string="Invoiced" name="filter_invoiced"
                        domain="[('state', '=', 'invoiced')]"/>

                <separator/>

                <filter string="Response Pending" name="filter_response_pending"
                        domain="[('response_sent', '=', False), ('state', 'in', ['validated', 'matched'])]"/>
                <filter string="Response Sent" name="filter_response_sent"
                        domain="[('response_sent', '=', True)]"/>

                <separator/>

                <filter string="This Month" name="filter_this_month"
                        domain="[('received_date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="filter_this_week"
                        domain="[('received_date', '&gt;=', (context_today() - relativedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>

                <group>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="DTE Type" name="group_dte_type" context="{'group_by': 'dte_type'}"/>
                    <filter string="Supplier" name="group_supplier" context="{'group_by': 'partner_id'}"/>
                    <filter string="Received Date" name="group_received_date" context="{'group_by': 'received_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_dte_inbox" model="ir.actions.act_window">
        <field name="name">Received DTEs</field>
        <field name="res_model">dte.inbox</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_filter_new': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No DTEs received yet
            </p>
            <p>
                DTEs from suppliers will appear here automatically when received via email or downloaded from SII.
            </p>
        </field>
    </record>

</odoo>
