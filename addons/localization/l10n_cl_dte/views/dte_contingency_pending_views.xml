<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ══════════════════════════════════════════════════════════════════════
         DTE CONTINGENCY PENDING VIEWS - Native Implementation
         ══════════════════════════════════════════════════════════════════════
         Migration from: odoo-eergy-services/contingency/contingency_manager.py (2025-10-24)

         Pending DTEs stored during contingency mode.
         OBLIGATORIO por normativa SII chilena.
    -->

    <!-- Tree View -->
    <record id="view_dte_contingency_pending_tree" model="ir.ui.view">
        <field name="name">dte.contingency.pending.tree</field>
        <field name="model">dte.contingency.pending</field>
        <field name="arch" type="xml">
            <list string="Pending DTEs (Contingency)"
                  decoration-success="uploaded == True"
                  decoration-warning="uploaded == False"
                  create="false" edit="false">
                <field name="stored_date"/>
                <field name="dte_type"/>
                <field name="folio"/>
                <field name="rut_emisor"/>
                <field name="uploaded" widget="boolean_toggle"/>
                <field name="uploaded_date"/>
                <field name="track_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <button name="action_upload_now"
                        string="Upload Now"
                        type="object"
                        icon="fa-cloud-upload"
                        invisible="uploaded == True"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_dte_contingency_pending_form" model="ir.ui.view">
        <field name="name">dte.contingency.pending.form</field>
        <field name="model">dte.contingency.pending</field>
        <field name="arch" type="xml">
            <form string="Pending DTE (Contingency)" create="false" edit="false">
                <header>
                    <button name="action_upload_now"
                            string="Upload to SII Now"
                            type="object"
                            class="btn-primary"
                            icon="fa-cloud-upload"
                            confirm="Are you sure you want to upload this DTE to SII now?"
                            invisible="uploaded == True"/>
                    <field name="uploaded" widget="statusbar" statusbar_visible="False,True" clickable="False"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(account.action_move_journal_line)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-file-text-o"
                                context="{'search_default_move_id': move_id}">
                            <field name="move_id" widget="statinfo" string="Invoice"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                        <div class="badge badge-pill badge-success" invisible="uploaded == False">
                            <i class="fa fa-check"/> UPLOADED
                        </div>
                        <div class="badge badge-pill badge-warning" invisible="uploaded == True">
                            <i class="fa fa-clock-o"/> PENDING UPLOAD
                        </div>
                    </div>

                    <div class="alert alert-warning" role="alert" invisible="uploaded == True">
                        <strong>⚠️ Pending Upload</strong>
                        <p>This DTE was created during contingency mode and has not been uploaded to SII yet.</p>
                    </div>

                    <div class="alert alert-success" role="alert" invisible="uploaded == False">
                        <strong>✅ Successfully Uploaded</strong>
                        <p>This DTE was uploaded to SII on <field name="uploaded_date" readonly="1" nolabel="1"/>.</p>
                    </div>

                    <div class="alert alert-danger" role="alert" invisible="upload_error == False">
                        <strong>❌ Upload Error</strong>
                        <p><field name="upload_error" readonly="1" nolabel="1"/></p>
                    </div>

                    <group>
                        <group name="dte_info" string="DTE Information">
                            <field name="dte_type"/>
                            <field name="folio"/>
                            <field name="rut_emisor"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>

                        <group name="storage_info" string="Storage Information">
                            <field name="stored_date"/>
                            <field name="uploaded_date" invisible="uploaded == False"/>
                            <field name="track_id" invisible="uploaded == False"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="xml_content" string="XML Content">
                            <group>
                                <field name="xml_content" widget="binary" filename="'DTE_' + str(dte_type) + '_' + str(folio) + '.xml'"/>
                            </group>
                        </page>

                        <page name="error_details" string="Error Details" invisible="upload_error == False">
                            <group>
                                <field name="upload_error" readonly="1" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_dte_contingency_pending_search" model="ir.ui.view">
        <field name="name">dte.contingency.pending.search</field>
        <field name="model">dte.contingency.pending</field>
        <field name="arch" type="xml">
            <search string="Pending DTEs (Contingency)">
                <field name="folio" string="Folio"/>
                <field name="dte_type" string="DTE Type"/>
                <field name="rut_emisor" string="RUT Emisor"/>
                <field name="track_id" string="Track ID"/>
                <field name="company_id" groups="base.group_multi_company"/>

                <!-- Filters -->
                <filter name="filter_pending" string="Pending Upload" domain="[('uploaded', '=', False)]"/>
                <filter name="filter_uploaded" string="Uploaded" domain="[('uploaded', '=', True)]"/>
                <filter name="filter_with_errors" string="With Errors" domain="[('upload_error', '!=', False)]"/>

                <separator/>

                <filter name="filter_stored_date" string="Stored Date" date="stored_date"/>

                <separator/>

                <filter name="filter_dte_33" string="Factura (33)" domain="[('dte_type', '=', '33')]"/>
                <filter name="filter_dte_34" string="Factura Exenta (34)" domain="[('dte_type', '=', '34')]"/>
                <filter name="filter_dte_52" string="Guía Despacho (52)" domain="[('dte_type', '=', '52')]"/>
                <filter name="filter_dte_56" string="Nota Débito (56)" domain="[('dte_type', '=', '56')]"/>
                <filter name="filter_dte_61" string="Nota Crédito (61)" domain="[('dte_type', '=', '61')]"/>

                <separator/>

                <group>
                    <filter name="group_uploaded" string="Upload Status" context="{'group_by': 'uploaded'}"/>
                    <filter name="group_dte_type" string="DTE Type" context="{'group_by': 'dte_type'}"/>
                    <filter name="group_company" string="Company" context="{'group_by': 'company_id'}"/>
                    <filter name="group_stored_date" string="Stored Date" context="{'group_by': 'stored_date:month'}"/>
                    <filter name="group_uploaded_date" string="Uploaded Date" context="{'group_by': 'uploaded_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_dte_contingency_pending" model="ir.actions.act_window">
        <field name="name">Pending DTEs (Contingency)</field>
        <field name="res_model">dte.contingency.pending</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No pending DTEs in contingency mode
            </p>
            <p>
                DTEs created during contingency mode are stored here until
                they can be uploaded to SII.
            </p>
        </field>
    </record>

    <!-- Menu Item: MOVED to views/menus.xml to fix loading order issue -->
</odoo>
