<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="account_financial_report.AnalyticReportDashboard">
        <div class="analytic-report-dashboard h-100 d-flex flex-column">
            <!-- Header con filtros -->
            <div class="dashboard-header bg-white border-bottom p-3">
                <div class="row align-items-end">
                    <div class="col-md-4">
                        <label class="form-label">Proyectos</label>
                        <select class="form-select" multiple="multiple" size="5"
                                t-on-change="onProjectSelectionChange">
                            <t t-foreach="availableProjects" t-as="project" t-key="project.id">
                                <option t-att-value="project.id" 
                                        t-att-selected="state.selectedProjects.includes(project.id)">
                                    <t /> - <t />
                                </option>
                            </t>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Fecha Desde</label>
                        <input type="date" class="form-control" 
                               t-model="state.dateFrom"
                               t-on-change="onDateChange"/>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Fecha Hasta</label>
                        <input type="date" class="form-control" 
                               t-model="state.dateTo"
                               t-on-change="onDateChange"/>
                    </div>
                    <div class="col-md-4">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" 
                                   t-model="state.includeTimesheet"
                                   t-on-change="onFilterChange"/>
                            <label class="form-check-label">Incluir Timesheet</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" 
                                   t-model="state.groupByAccount"
                                   t-on-change="onFilterChange"/>
                            <label class="form-check-label">Agrupar por Cuenta</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" 
                                   t-model="state.includeChildAccounts"
                                   t-on-change="onFilterChange"/>
                            <label class="form-check-label">Incluir Cuentas Hijas</label>
                        </div>
                    </div>
                </div>
                
                <!-- Tabs -->
                <ul class="nav nav-tabs mt-3" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link" t-att-class="state.activeTab === 'detail' ? 'active' : ''"
                           href="#" t-on-click.prevent="() => onTabChange('detail')">
                            <i class="fa fa-list-alt me-1"/> Detalle por Proyecto
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" t-att-class="state.activeTab === 'dashboard' ? 'active' : ''"
                           href="#" t-on-click.prevent="() => onTabChange('dashboard')">
                            <i class="fa fa-dashboard me-1"/> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" t-att-class="state.activeTab === 'comparison' ? 'active' : ''"
                           href="#" t-on-click.prevent="() => onTabChange('comparison')">
                            <i class="fa fa-balance-scale me-1"/> Comparación
                        </a>
                    </li>
                    <li class="nav-item ms-auto">
                        <button class="btn btn-primary btn-sm" t-on-click="exportToExcel">
                            <i class="fa fa-download me-1"/> Exportar Excel
                        </button>
                    </li>
                </ul>
            </div>

            <!-- Content Area -->
            <div class="dashboard-content flex-grow-1 overflow-auto p-3">
                <t >
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                    </div>
                </t>

                <t t-else="">
                    <!-- Tab: Detalle por Proyecto -->
                    <div  class="tab-content">
                        <t >
                            <t t-foreach="Object.entries(state.reportData)" t-as="project" t-key="project[0]">
                                <div class="card mb-3">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h5 class="mb-0">
                                            <t /> - 
                                            <t />
                                        </h5>
                                        <div class="d-flex gap-3">
                                            <span class="badge bg-info">
                                                <i class="fa fa-clock-o"/> 
                                                <t /> hrs
                                            </span>
                                            <span t-att-class="'badge ' + (project[1].totals.balance &lt; 0 ? 'bg-success' : 'bg-danger')">
                                                <t />
                                            </span>
                                        </div>
                                    </div>
                                    
                                    <div class="card-body">
                                        <!-- Resumen del Proyecto -->
                                        <div class="row mb-3">
                                            <div class="col-md-3">
                                                <div class="text-muted">Ingresos</div>
                                                <div class="h5 text-success">
                                                    <t />
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="text-muted">Costos</div>
                                                <div class="h5 text-danger">
                                                    <t />
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="text-muted">Margen</div>
                                                <div class="h5" t-att-class="getProjectClass(project[1].totals.credit - project[1].totals.debit)">
                                                    <t />
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="text-muted">Costo HH</div>
                                                <div class="h5 text-info">
                                                    <t />
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Detalle por Cuenta Contable -->
                                        <t >
                                            <h6 class="mt-4 mb-2">
                                                <a href="#" t-on-click.prevent="() => toggleAccountDetails(project[0])">
                                                    <i class="fa fa-chevron-right me-1"/> Detalle por Cuenta Contable
                                                </a>
                                            </h6>
                                            <div t-att-id="'account-details-' + project[0]" class="collapse">
                                                <table class="table table-sm table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th>Cuenta</th>
                                                            <th>Descripción</th>
                                                            <th class="text-end">Débito</th>
                                                            <th class="text-end">Crédito</th>
                                                            <th class="text-end">Balance</th>
                                                            <th width="50"></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <t t-foreach="Object.entries(project[1].accounts)" t-as="account" t-key="account[0]">
                                                            <tr>
                                                                <td><t /></td>
                                                                <td><t /></td>
                                                                <td class="text-end">
                                                                    <t />
                                                                </td>
                                                                <td class="text-end">
                                                                    <t />
                                                                </td>
                                                                <td class="text-end" t-att-class="account[1].balance > 0 ? 'text-danger' : 'text-success'">
                                                                    <t />
                                                                </td>
                                                                <td>
                                                                    <button class="btn btn-sm btn-link" 
                                                                            t-on-click="() => openAccountMoveLines(account[1].account_id, project[0])">
                                                                        <i class="fa fa-external-link"/>
                                                                    </button>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </t>

                                        <!-- Detalle de Timesheet -->
                                        <t >
                                            <h6 class="mt-4 mb-2">Detalle de Horas por Empleado</h6>
                                            <table class="table table-sm">
                                                <thead>
                                                    <tr>
                                                        <th>Empleado</th>
                                                        <th class="text-end">Horas</th>
                                                        <th class="text-end">Costo/Hr</th>
                                                        <th class="text-end">Costo Total</th>
                                                        <th class="text-end">Días</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="project[1].timesheet.employees" t-as="emp" t-key="emp.employee_id">
                                                        <tr>
                                                            <td><t /></td>
                                                            <td class="text-end">
                                                                <t />
                                                            </td>
                                                            <td class="text-end">
                                                                <t />
                                                            </td>
                                                            <td class="text-end">
                                                                <t />
                                                            </td>
                                                            <td class="text-end">
                                                                <t />
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </t>
                                    </div>
                                </div>
                            </t>
                        </t>
                    </div>

                    <!-- Tab: Dashboard -->
                    <div  class="tab-content">
                        <t >
                            <!-- KPIs Row -->
                            <div class="row mb-4">
                                <div class="col-md-3">
                                    <div class="card text-center">
                                        <div class="card-body">
                                            <h6 class="text-muted">Proyectos Totales</h6>
                                            <h3 class="mb-0">
                                                <t />
                                            </h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card text-center">
                                        <div class="card-body">
                                            <h6 class="text-muted">Proyectos Rentables</h6>
                                            <h3 class="mb-0 text-success">
                                                <t />
                                            </h3>
                                            <small class="text-muted">
                                                <t />%
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card text-center">
                                        <div class="card-body">
                                            <h6 class="text-muted">Ingreso por Hora</h6>
                                            <h3 class="mb-0">
                                                <t />
                                            </h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card text-center">
                                        <div class="card-body">
                                            <h6 class="text-muted">Duración Promedio</h6>
                                            <h3 class="mb-0">
                                                <t /> hrs
                                            </h3>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Charts Row 1 -->
                            <div class="row mb-4">
                                <div class="col-md-8">
                                    <div class="card">
                                        <div class="card-body">
                                            <canvas t-ref="monthlyEvolutionChart" height="300"></canvas>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-body">
                                            <canvas t-ref="costBreakdownChart" height="300"></canvas>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Charts Row 2 -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="card">
                                        <div class="card-body">
                                            <canvas t-ref="projectProfitabilityChart" height="300"></canvas>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card">
                                        <div class="card-body">
                                            <canvas t-ref="hoursDistributionChart" height="300"></canvas>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>

                    <!-- Tab: Comparación -->
                    <div  class="tab-content">
                        <div class="card">
                            <div class="card-body">
                                <h5>Comparación entre Proyectos</h5>
                                <t >
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Proyecto</th>
                                                <th class="text-end">Ingresos</th>
                                                <th class="text-end">Costos</th>
                                                <th class="text-end">Margen</th>
                                                <th class="text-end">Margen %</th>
                                                <th class="text-end">Horas</th>
                                                <th class="text-end">Costo HH</th>
                                                <th>Estado</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="state.dashboardData.project_summary" t-as="proj" t-key="proj.id">
                                                <tr>
                                                    <td>
                                                        <strong><t /></strong><br/>
                                                        <small class="text-muted"><t /></small>
                                                    </td>
                                                    <td class="text-end text-success">
                                                        <t />
                                                    </td>
                                                    <td class="text-end text-danger">
                                                        <t />
                                                    </td>
                                                    <td class="text-end" t-att-class="getProjectClass(proj.margin)">
                                                        <t />
                                                    </td>
                                                    <td class="text-end" t-att-class="getProjectClass(proj.margin)">
                                                        <t />%
                                                    </td>
                                                    <td class="text-end">
                                                        <t />
                                                    </td>
                                                    <td class="text-end">
                                                        <t />
                                                    </td>
                                                    <td>
                                                        <span t-att-class="'badge ' + (proj.status === 'profitable' ? 'bg-success' : 'bg-danger')">
                                                            <t />
                                                        </span>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                        <tfoot>
                                            <tr class="fw-bold">
                                                <td>TOTALES</td>
                                                <td class="text-end text-success">
                                                    <t />
                                                </td>
                                                <td class="text-end text-danger">
                                                    <t />
                                                </td>
                                                <td class="text-end">
                                                    <t />
                                                </td>
                                                <td class="text-end">-</td>
                                                <td class="text-end">
                                                    <t />
                                                </td>
                                                <td class="text-end">
                                                    <t />
                                                </td>
                                                <td>-</td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </t>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </div>
    </t>
</templates>
