            id="menu_analytic_dashboard"
            name="Dashboard de Proyectos"
            parent="menu_analytic_reports_main"
            action="action_analytic_report_dashboard"
            sequence="10"
            groups="account.group_account_user"/>

        
        <menuitem 
            id="menu_analytic_detailed_report"
            name="Detalle por Proyecto"
            parent="menu_analytic_reports_main"
            action="action_analytic_report_dashboard"
            sequence="20"
            groups="account.group_account_user"/>

        
        <menuitem 
            id="menu_analytic_comparison"
            name="Comparación de Proyectos"
            parent="menu_analytic_reports_main"
            action="action_analytic_report_dashboard"
            sequence="30"
            groups="account.group_account_user"/>

        
        <menuitem 
            id="menu_analytic_profitability"
            name="Análisis de Rentabilidad"
            parent="menu_analytic_reports_main"
