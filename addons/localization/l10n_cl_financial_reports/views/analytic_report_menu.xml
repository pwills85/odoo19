<?xml version="1.0" encoding="utf-8"?>
<odoo>
        
        <record id="action_analytic_report_dashboard" model="ir.actions.client">
            <field name="name">Reportes Analíticos por Proyecto</field>
            <field name="tag">l10n_cl_financial_reports.analytic_dashboard</field>
            <field name="target">fullscreen</field>
            <field name="context">{
                'active_test': False,
                'search_default_active': 1
            }</field>
        </record>

        
        <menuitem 
            id="menu_analytic_reports_main"
            name="Reportes Analíticos"
            parent="account.menu_finance_reports"
