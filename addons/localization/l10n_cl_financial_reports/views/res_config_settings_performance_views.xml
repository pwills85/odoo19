                                <field name="enable_prefetch_optimization"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_prefetch_optimization"/>
                                <div class="text-muted">
                                    <strong>Prefetch Optimization:</strong><br/>
                                    Previene N+1 queries mediante carga inteligente de relaciones
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Configuraciones de Batch Processing -->
                    <h3>Procesamiento por Lotes</h3>
                    <div class="row mt16 o_setting_box" id="batch_processing_settings">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="financial_report_batch_size"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="financial_report_batch_size"/>
