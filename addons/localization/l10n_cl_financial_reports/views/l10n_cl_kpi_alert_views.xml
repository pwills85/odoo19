<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_l10n_cl_kpi_alert_tree" model="ir.ui.view">
        <field name="name">l10n_cl.kpi.alert.tree</field>
        <field name="model">l10n_cl.kpi.alert</field>
        <field name="arch" type="xml">
            <tree string="Alertas de KPI"
                  decoration-muted="not active"
                  decoration-warning="alert_level == 'warning'"
                  decoration-danger="alert_level == 'critical'"
                  decoration-info="alert_level == 'info'">
                <field name="priority" widget="priority"/>
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="kpi_type"/>
                <field name="threshold_type"/>
                <field name="threshold_value" widget="monetary"/>
                <field name="alert_level"/>
                <field name="last_triggered_date"/>
                <field name="triggered_count"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_l10n_cl_kpi_alert_form" model="ir.ui.view">
        <field name="name">l10n_cl.kpi.alert.form</field>
        <field name="model">l10n_cl.kpi.alert</field>
        <field name="arch" type="xml">
            <form string="Alerta de KPI">
                <header>
                    <button name="action_test_alert" string="Probar Alerta" type="object"
                            class="btn-primary" help="Ejecuta una prueba de la alerta con datos actuales"/>
                    <field name="alert_level" widget="statusbar" clickable="1"
                           statusbar_visible="info,warning,critical"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Desactivada" bg_color="bg-danger"
                            invisible="active"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre de la alerta..."/>
                        </h1>
                    </div>

                    <group>
                        <group string="Configuración de KPI">
                            <field name="company_id" required="1" options="{'no_create': True}"/>
                            <field name="kpi_type" required="1"/>
                            <field name="threshold_type" required="1"/>
                            <field name="threshold_value" required="1" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="Configuración de Alerta">
                            <field name="priority" widget="priority"/>
                            <field name="notification_user_ids" widget="many2many_tags"
                                   placeholder="Usuarios a notificar (vacío = todos los usuarios de la compañía)"/>
                        </group>
                    </group>

                    <group string="Estadísticas">
                        <group>
                            <field name="last_triggered_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="triggered_count" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Notas" name="notes">
                            <field name="notes" placeholder="Información adicional sobre esta alerta..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_l10n_cl_kpi_alert_kanban" model="ir.ui.view">
        <field name="name">l10n_cl.kpi.alert.kanban</field>
        <field name="model">l10n_cl.kpi.alert</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="name"/>
                <field name="kpi_type"/>
                <field name="threshold_value"/>
                <field name="alert_level"/>
                <field name="triggered_count"/>
                <field name="last_triggered_date"/>
                <field name="active"/>
                <field name="currency_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click"
                             t-att-class="record.alert_level.raw_value == 'critical' ? 'border-danger' : (record.alert_level.raw_value == 'warning' ? 'border-warning' : 'border-info')">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name"/>
                                    </div>
                                </div>
                                <div class="o_dropdown_kanban dropdown">
                                    <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Editar</a></t>
                                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Eliminar</a></t>
                                    </div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>KPI:</strong><br/>
                                        <field name="kpi_type"/>
                                    </div>
                                    <div class="col-6 text-end">
                                        <strong>Umbral:</strong><br/>
                                        <field name="threshold_value" widget="monetary"/>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <strong>Nivel:</strong><br/>
                                        <span t-att-class="'badge badge-' + (record.alert_level.raw_value == 'critical' ? 'danger' : (record.alert_level.raw_value == 'warning' ? 'warning' : 'info'))">
                                            <field name="alert_level"/>
                                        </span>
                                    </div>
                                    <div class="col-6 text-end">
                                        <strong>Veces Disparada:</strong><br/>
                                        <span class="badge bg-secondary">
                                            <field name="triggered_count"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="row mt-2" t-if="record.last_triggered_date.raw_value">
                                    <div class="col-12">
                                        <small class="text-muted">
                                            Última activación: <field name="last_triggered_date"/>
                                        </small>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_footer" t-if="!record.active.raw_value">
                                <div class="badge bg-secondary">Desactivada</div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_l10n_cl_kpi_alert_search" model="ir.ui.view">
        <field name="name">l10n_cl.kpi.alert.search</field>
        <field name="model">l10n_cl.kpi.alert</field>
        <field name="arch" type="xml">
            <search string="Buscar Alertas">
                <field name="name"/>
                <field name="kpi_type"/>
                <field name="company_id"/>
                <separator/>
                <filter string="Activas" name="active" domain="[('active', '=', True)]"/>
                <filter string="Desactivadas" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Críticas" name="critical" domain="[('alert_level', '=', 'critical')]"/>
                <filter string="Advertencia" name="warning" domain="[('alert_level', '=', 'warning')]"/>
                <filter string="Información" name="info" domain="[('alert_level', '=', 'info')]"/>
                <separator/>
                <filter string="Recién Disparadas" name="recently_triggered"
                        domain="[('last_triggered_date', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Tipo de KPI" name="group_kpi_type" context="{'group_by': 'kpi_type'}"/>
                    <filter string="Nivel de Alerta" name="group_alert_level" context="{'group_by': 'alert_level'}"/>
                    <filter string="Compañía" name="group_company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_l10n_cl_kpi_alert" model="ir.actions.act_window">
        <field name="name">Alertas de KPI</field>
        <field name="res_model">l10n_cl.kpi.alert</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Crea tu primera alerta de KPI!
            </p>
            <p>
                Las alertas te notificarán automáticamente cuando los KPIs superen los umbrales configurados.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_l10n_cl_kpi_alert"
              name="Alertas de KPI"
              parent="l10n_cl_financial_reports.menu_l10n_cl_financial_reports_root"
              action="action_l10n_cl_kpi_alert"
              sequence="40"
              groups="account.group_account_user"/>

</odoo>
