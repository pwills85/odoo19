<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_general_ledger_tree" model="ir.ui.view">
        <field name="name">account.general.ledger.tree</field>
        <field name="model">account.general.ledger</field>
        <field name="arch" type="xml">
            <list string="Mayor Analítico" create="1" delete="1">
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="state" decoration-success="state == 'computed'" decoration-warning="state == 'computing'" decoration-danger="state == 'error'" widget="badge"/>
                <field name="account_count"/>
                <field name="move_count"/>
                <field name="last_compute"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_general_ledger_form" model="ir.ui.view">
        <field name="name">account.general.ledger.form</field>
        <field name="model">account.general.ledger</field>
        <field name="arch" type="xml">
            <form string="Mayor Analítico / General Ledger">
                <header>
                    <button name="action_compute_ledger" string="Generar Mayor" type="object" class="btn-primary" invisible="state == 'computing'"/>
                    <button name="action_refresh" string="Actualizar" type="object" invisible="state != 'computed'"/>
                    <button name="action_export_excel" string="Exportar Excel" type="object" class="btn-success" invisible="state != 'computed'"/>
                    <button name="action_export_pdf" string="Exportar PDF" type="object" invisible="state != 'computed'"/>
                    <button name="action_print_by_partner" string="Por Socio" type="object" invisible="state != 'computed'" groups="base.group_no_one"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,computing,computed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Período y Compañía">
                            <field name="date_from" readonly="state != 'draft'"/>
                            <field name="date_to" readonly="state != 'draft'"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="state != 'draft'"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="Estadísticas">
                            <field name="account_count" readonly="1"/>
                            <field name="move_count" readonly="1"/>
                            <field name="total_balance" widget="monetary" readonly="1"/>
                            <field name="last_compute" readonly="1"/>
                        </group>
                    </group>

                    <!-- Filtros -->
                    <group string="Filtros" col="4">
                        <field name="account_ids" widget="many2many_tags" readonly="state != 'draft'" colspan="2"/>
                        <field name="account_group_ids" widget="many2many_tags" readonly="state != 'draft'" colspan="2"/>
                        <field name="partner_ids" widget="many2many_tags" readonly="state != 'draft'" colspan="4"/>
                    </group>

                    <!-- Opciones -->
                    <group string="Opciones de Visualización" col="4">
                        <field name="show_initial_balance" readonly="state != 'draft'"/>
                        <field name="show_partner_details" readonly="state != 'draft'"/>
                        <field name="show_analytic_details" readonly="state != 'draft'"/>
                        <field name="centralize_journals" readonly="state != 'draft'"/>
                        <field name="include_unposted" readonly="state != 'draft'"/>
                    </group>

                    <!-- Totales -->
                    <group string="Resumen de Totales" invisible="state != 'computed'" col="4">
                        <field name="total_debit" widget="monetary"/>
                        <field name="total_credit" widget="monetary"/>
                        <field name="total_balance" widget="monetary" colspan="2"/>
                    </group>

                    <!-- Líneas del Mayor -->
                    <notebook invisible="state != 'computed'">
                        <page string="Movimientos">
                            <field name="line_ids" readonly="1">
                                <list string="Líneas del Mayor" create="0" delete="0" decoration-bf="line_type == 'total'" decoration-it="line_type == 'initial'">
                                    <field name="sequence" invisible="1"/>
                                    <field name="line_type" invisible="1"/>
                                    <field name="date"/>
                                    <field name="journal_code" optional="show"/>
                                    <field name="move_name" optional="show"/>
                                    <field name="account_code"/>
                                    <field name="account_name"/>
                                    <field name="name"/>
                                    <field name="ref" optional="hide"/>
                                    <field name="partner_name" optional="show"/>
                                    <field name="debit" sum="Total" widget="monetary"/>
                                    <field name="credit" sum="Total" widget="monetary"/>
                                    <field name="balance" widget="monetary"/>
                                    <field name="cumulative_balance" widget="monetary"/>
                                    <field name="analytic_account_name" optional="hide"/>
                                    <button name="action_open_move" string="Ver Asiento" type="object" icon="fa-external-link" invisible="move_id == False"/>
                                </list>
                            </field>
                        </page>
                        <page string="Vista Resumida">
                            <group>
                                <p class="text-muted">
                                    Vista resumida con totales por cuenta. Para ver el detalle completo, 
                                    utilice la pestaña "Movimientos" o exporte a Excel.
                                </p>
                            </group>
                            <field name="line_ids" readonly="1">
                                <list string="Resumen por Cuenta" create="0" delete="0">
                                    <field name="account_code" invisible="line_type != 'total'"/>
                                    <field name="account_name" invisible="line_type != 'total'"/>
                                    <field name="debit" sum="Total" widget="monetary" invisible="line_type != 'total'"/>
                                    <field name="credit" sum="Total" widget="monetary" invisible="line_type != 'total'"/>
                                    <field name="balance" widget="monetary" invisible="line_type != 'total'"/>
                                    <field name="cumulative_balance" widget="monetary" invisible="line_type != 'total'"/>
                                    <field name="line_type" invisible="1"/>
                                </list>
                                <!-- <search>
                                    <filter string="Solo Totales" name="only_totals" domain="[('line_type', '=', 'total')]"/>
                                </search> -->
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div> -->
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_general_ledger_search" model="ir.ui.view">
        <field name="name">account.general.ledger.search</field>
        <field name="model">account.general.ledger</field>
        <field name="arch" type="xml">
            <search string="Buscar Mayor Analítico">
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="account_ids"/>
                <filter string="Calculados" name="computed" domain="[('state', '=', 'computed')]"/>
                <filter string="Con Errores" name="errors" domain="[('state', '=', 'error')]"/>
                <separator/>
                <filter string="Con Detalles de Socio" name="with_partner" domain="[('show_partner_details', '=', True)]"/>
                <filter string="Con Detalles Analíticos" name="with_analytic" domain="[('show_analytic_details', '=', True)]"/>
                <separator/>
                <filter string="Hoy" name="today" help="Creados hoy"/>
                <filter string="Esta Semana" name="week" help="Creados esta semana"/>
                <filter string="Este Mes" name="month" help="Creados este mes"/>
                <separator/>
                <filter string="Compañía" name="group_company" domain="[]" context="{'group_by': 'company_id'}"/>
                <filter string="Estado" name="group_state" domain="[]" context="{'group_by': 'state'}"/>
                <filter string="Mes" name="group_month" domain="[]" context="{'group_by': 'create_date:month'}"/>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_general_ledger_kanban" model="ir.ui.view">
        <field name="name">account.general.ledger.kanban</field>
        <field name="model">account.general.ledger</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="1">
                <field name="name"/>
                <field name="company_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="state"/>
                <field name="account_count"/>
                <field name="move_count"/>
                <field name="total_balance"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle text-muted">
                                        <field name="company_id" groups="base.group_multi_company"/>
                                        <span> • </span>
                                        <field name="date_from"/> - <field name="date_to"/>
                                    </div>
                                </div>
                                <field name="state" widget="label_selection" options="{'classes': {'draft': 'secondary', 'computing': 'warning', 'computed': 'success', 'error': 'danger'}}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div >
                                    <span class="text-muted">Cuentas:</span>
                                    <strong><field name="account_count"/></strong>
                                    <br/>
                                    <span class="text-muted">Movimientos:</span>
                                    <strong><field name="move_count"/></strong>
                                    <br/>
                                    <span class="text-muted">Balance:</span>
                                    <strong><field name="total_balance" widget="monetary"/></strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_general_ledger" model="ir.actions.act_window">
        <field name="name">Mayor Analítico</field>
        <field name="res_model">account.general.ledger</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'default_company_id': allowed_company_ids[0] if allowed_company_ids else False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo Mayor Analítico
            </p>
            <p>
                El Mayor Analítico (General Ledger) muestra todos los movimientos contables
                detallados por cuenta, con saldos iniciales y acumulados.
            </p>
            <p>
                Es una herramienta esencial para auditorías y análisis detallado de las
                transacciones contables de la empresa.
            </p>
        </field>
    </record>

    <!-- Menu Item moved to menu_items_sub.xml -->

    <!-- Widget para abrir movimiento -->
    <record id="action_open_move_widget" model="ir.actions.act_window">
        <field name="name">Asiento Contable</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

</odoo>