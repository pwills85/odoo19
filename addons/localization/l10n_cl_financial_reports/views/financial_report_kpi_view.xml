<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    
    
    <record id="view_financial_report_kpi_tree" model="ir.ui.view">
        <field name="name">financial.report.kpi.tree</field>
        <field name="model">financial.report.kpi</field>
        <field name="arch" type="xml">
            <list string="Financial KPIs" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="report_line_id"/>
                <field name="user_id"/>
            </list>
        </field>
    </record>
    
    
    <record id="view_financial_report_kpi_form" model="ir.ui.view">
        <field name="name">financial.report.kpi.form</field>
        <field name="model">financial.report.kpi</field>
        <field name="arch" type="xml">
            <form string="Financial KPI">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="KPI Name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="KPI Configuration">
                            <field name="sequence"/>
                            <field name="report_line_id"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    
    <record id="view_financial_report_kpi_search" model="ir.ui.view">
        <field name="name">financial.report.kpi.search</field>
        <field name="model">financial.report.kpi</field>
        <field name="arch" type="xml">
            <search string="Financial KPIs">
                <field name="name"/>
                <field name="report_line_id"/>
                <field name="user_id"/>

                <separator/>
                <filter string="User" name="group_user"
                        context="{'group_by': 'user_id'}"/>
                <filter string="Report Line" name="group_report_line"
                        context="{'group_by': 'report_line_id'}"/>
            </search>
        </field>
    </record>
    
    
    <record id="action_financial_report_kpi" model="ir.actions.act_window">
        <field name="name">Financial KPIs</field>
        <field name="res_model">financial.report.kpi</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Financial KPI!
            </p>
            <p>
                Track key performance indicators for your financial reports
                and monitor business performance in real-time.
            </p>
        </field>
    </record>

</odoo>
