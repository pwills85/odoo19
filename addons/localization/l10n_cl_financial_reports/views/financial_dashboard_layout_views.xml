<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Tree View for Financial Dashboard Layout -->
        <record id="financial_dashboard_layout_tree_view" model="ir.ui.view">
            <field name="name">financial.dashboard.layout.tree</field>
            <field name="model">financial.dashboard.layout</field>
            <field name="arch" type="xml">
                <list string="Dashboards Financieros"
                      decoration-bf="is_default"
                      decoration-success="is_default">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="widget_count"/>
                    <field name="is_default"/>
                    <field name="create_date"/>
                    <field name="write_date"/>
                </list>
            </field>
        </record>

        <!-- Form View for Financial Dashboard Layout -->
        <record id="financial_dashboard_layout_form_view" model="ir.ui.view">
            <field name="name">financial.dashboard.layout.form</field>
            <field name="model">financial.dashboard.layout</field>
            <field name="arch" type="xml">
                <form string="Dashboard Financiero">
                    <header>
                        <button name="action_add_widget" type="object" 
                                string="Añadir Widget" class="btn-primary"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" icon="fa-tachometer" type="action">
                                <field name="widget_count" widget="statinfo" string="Widgets"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nombre del Dashboard..."/>
                            </h1>
                        </div>
                        
                        <group>
                            <group name="basic_info" string="Información Básica">
                                <field name="user_id" 
                                       readonly="id"
                                       options="{'no_create': True, 'no_edit': True}"/>
                                <field name="is_default"/>
                            </group>
                            <group name="metadata" string="Información del Sistema">
                                <field name="create_date" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Descripción" name="description">
                                <field name="description" placeholder="Describe el propósito de este dashboard..."/>
                            </page>
                            
                            <page string="Configuración JSON" name="config"
                                  invisible="not layout_config">
                                <field name="layout_config"
                                       widget="text"
                                       readonly="1"/>
                            </page>
                            
                            <page string="Widgets Individuales" name="widgets">
                                <field name="widget_identifier" invisible="1"/>
                                <field name="widget_template_id" invisible="1"/>
                                <field name="pos_x" invisible="1"/>
                                <field name="pos_y" invisible="1"/>
                                <field name="size_w" invisible="1"/>
                                <field name="size_h" invisible="1"/>
                                
                                <div class="alert alert-info" role="alert">
                                    <strong>Gestión de Widgets:</strong> 
                                    Utiliza el botón "Añadir Widget" para añadir nuevos widgets a este dashboard.
                                    La configuración completa se almacena en formato JSON.
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View for Financial Dashboard Layout -->
        <record id="financial_dashboard_layout_search_view" model="ir.ui.view">
            <field name="name">financial.dashboard.layout.search</field>
            <field name="model">financial.dashboard.layout</field>
            <field name="arch" type="xml">
                <search string="Buscar Dashboards">
                    <field name="name" string="Nombre"/>
                    <field name="user_id" string="Usuario"/>
                    <field name="description" string="Descripción"/>
                    
                    <filter name="my_dashboards" string="Mis Dashboards"
                            domain="[('user_id', '=', uid)]"/>
                    <filter name="default_dashboards" string="Dashboards por Defecto"
                            domain="[('is_default', '=', True)]"/>
                    
                    <separator/>
                    <filter name="recent" string="Recientes"
                            domain="[('write_date', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                    
                    <separator/>
                    <filter name="group_by_user" string="Usuario"
                            context="{'group_by': 'user_id'}"/>
                    <filter name="group_by_date" string="Fecha de Creación"
                            context="{'group_by': 'create_date:month'}"/>
                </search>
            </field>
        </record>

        <!-- Kanban View for Financial Dashboard Layout -->
        <record id="financial_dashboard_layout_kanban_view" model="ir.ui.view">
            <field name="name">financial.dashboard.layout.kanban</field>
            <field name="model">financial.dashboard.layout</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard" create="true">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="widget_count"/>
                    <field name="is_default"/>
                    <field name="description"/>
                    <field name="create_date"/>
                    <field name="write_date"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <strong>
                                                <field name="name"/>
                                                <t t-if="record.is_default.raw_value">
                                                    <span class="badge badge-success ml-2">Por Defecto</span>
                                                </t>
                                            </strong>
                                        </div>
                                        <div class="text-muted">
                                            <field name="user_id"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <a class="o_kanban_manage_toggle_button" href="#">
                                            <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                        </a>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_primary_left">
                                        <div class="row">
                                            <div class="col-6">
                                                <button class="btn btn-primary btn-block" 
                                                        name="action_add_widget" type="object">
                                                    <i class="fa fa-plus"/> Añadir Widget
                                                </button>
                                            </div>
                                            <div class="col-6">
                                                <div class="text-center">
                                                    <div class="h4 mb-0 text-primary">
                                                        <field name="widget_count"/>
                                                    </div>
                                                    <small class="text-muted">Widgets</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="o_kanban_primary_bottom bottom-0">
                                        <t t-if="record.description.value">
                                            <div class="text-muted">
                                                <field name="description"/>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-6 o_kanban_card_manage_section">
                                                <div role="menuitem" class="o_kanban_card_manage_title">
                                                    <span>Acciones</span>
                                                </div>
                                                <div role="menuitem">
                                                    <a name="action_add_widget" type="object">Añadir Widget</a>
                                                </div>
                                            </div>
                                            <div class="col-6 o_kanban_card_manage_section">
                                                <div role="menuitem" class="o_kanban_card_manage_title">
                                                    <span>Información</span>
                                                </div>
                                                <div role="menuitem">
                                                    Creado: <field name="create_date"/>
                                                </div>
                                                <div role="menuitem">
                                                    Modificado: <field name="write_date"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Actions for Financial Dashboard Layout -->
        <record id="action_financial_dashboard_layout" model="ir.actions.act_window">
            <field name="name">Dashboards Financieros</field>
            <field name="res_model">financial.dashboard.layout</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{
                'search_default_my_dashboards': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primer dashboard financiero
                </p>
                <p>
                    Los dashboards te permiten organizar widgets personalizables para visualizar 
                    información financiera importante de manera intuitiva y eficiente.
                </p>
                <p>
                    Cada dashboard puede contener múltiples widgets como KPIs, gráficos, 
                    tablas de datos y medidores que se actualizan automáticamente.
                </p>
            </field>
        </record>

        <!-- Menu Item for Financial Dashboard Layout -->
        <menuitem id="menu_financial_dashboard_layout"
                  name="Gestión de Dashboards"
                  parent="menu_financial_dashboard"
                  action="action_financial_dashboard_layout"
                  sequence="10"/>

    </data>
</odoo>