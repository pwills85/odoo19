# Database Configuration for Historical Data Extraction
# ======================================================
# Copy this file to .env and fill in your values

# PostgreSQL Connection (Odoo Database)
ODOO_DB_HOST=localhost
ODOO_DB_PORT=5432
ODOO_DB_NAME=odoo
ODOO_DB_USER=odoo
ODOO_DB_PASSWORD=odoo

# Training Configuration
TRAINING_YEARS=7
TRAINING_START_DATE=  # Optional: Override start date (YYYY-MM-DD)
TRAINING_END_DATE=    # Optional: Override end date (YYYY-MM-DD)

# ML Model Configuration
ML_MODEL_TYPE=gradient_boosting  # gradient_boosting, random_forest, xgboost
ML_TEST_SIZE=0.2
ML_RANDOM_STATE=42

# Embeddings Configuration
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_DEVICE=cpu  # cpu or cuda
FAISS_INDEX_TYPE=IndexFlatL2  # IndexFlatL2, IndexIVFFlat

# Claude Configuration (for KB building)
ANTHROPIC_API_KEY=sk-ant-xxxxx
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Output Paths
DATA_OUTPUT_DIR=/app/training/data
MODELS_OUTPUT_DIR=/app/training/models
EMBEDDINGS_OUTPUT_DIR=/app/training/embeddings
